@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> L
@{
    ViewData["Title"] = "ApexDrive – Car Rental in Thailand";
}

<!-- ===========================
     HERO
=========================== -->
<section id="home" class="relative">
    <div class="absolute inset-0 -z-10">
        <img src="https://images.unsplash.com/photo-1583573181567-d4736e51f61d?q=80&w=1600&auto=format&fit=crop"
             alt="Highway in Thailand"
             class="h-[80vh] w-full object-cover" />
        <div class="absolute inset-0 bg-gradient-to-b from-black/50 via-black/30 to-white/10"></div>
    </div>

    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex min-h-[80vh] items-center">
            <div class="max-w-2xl text-white">
                <h1 class="text-4xl sm:text-5xl font-extrabold leading-tight">
                    @L["Hero_Title", "Rent a Car in Thailand – Easy, Fast, Reliable"]
                </h1>

                <p class="mt-4 text-lg text-white/90">
                    @L["Hero_Subtitle", "Brand new fleet, no hidden fees, airport pickup, and 24/7 roadside support across Thailand."]
                </p>

                <div class="mt-6 flex flex-wrap items-center gap-4 text-sm text-white/90">
                    <div class="flex items-center gap-2">
                        <span class="inline-block h-2 w-2 rounded-full bg-green-400"></span>
                        @L["Hero_Benefit_FreeCancel", "Free Cancellation"]
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="inline-block h-2 w-2 rounded-full bg-green-400"></span>
                        @L["Hero_Benefit_PayCounter", "Pay at Counter"]
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="inline-block h-2 w-2 rounded-full bg-green-400"></span>
                        @L["Hero_Benefit_NoCardFees", "No Credit Card Fees"]
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Booking Card -->
    <div id="search" class="relative -mt-16 pb-8">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <form asp-area="Customer" asp-controller="Booking" asp-action="Search" method="post"
                  class="rounded-2xl bg-white p-4 sm:p-6 shadow-2xl ring-1 ring-black/5">


                <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-5 items-end">
                    <!-- Pickup & Drop-off Branches -->
                    <div class="flex flex-col lg:flex-row lg:items-end gap-4 lg:col-span-2">

                        <!-- Pickup -->
                        <div class="flex-1">
                            <label for="pickupBranch" class="flex items-center justify-between mb-1">
                                <span class="text-sm font-medium text-gray-700">
                                    @L["Pickup_Location_Label"]
                                </span>
                            </label>

                            <select id="pickupBranch"
                                    name="PickupBranchId"
                                    class="w-full rounded-xl border border-gray-300 bg-white px-4 py-3 text-gray-900
                       focus:border-primary-500 focus:ring-2 focus:ring-primary-200"
                                    required>

                                <option value="">
                                    @L["Select_Pickup_Branch", "Select Pickup Branch"]
                                </option>

                                @if (ViewBag.Branches != null && ((IEnumerable<dynamic>)ViewBag.Branches).Any())
                                {
                                    foreach (var branch in ViewBag.Branches)
                                    {
                                        <option value="@branch.BranchId">
                                            @branch.BranchName
                                        </option>
                                    }
                                }
                                else
                                {
                                    <option disabled>
                                        @L["No_Branches_Found"]
                                    </option>
                                }
                            </select>
                        </div>

                        <!-- Drop-off -->
                        <div class="flex-1">
                            <label for="dropoffBranch" class="flex items-center justify-between mb-1">
                                <span class="text-sm font-medium text-gray-700">
                                    @L["Return_Location_Label"]
                                </span>

                                <div class="flex items-center gap-1 text-xs sm:text-sm">
                                    <input id="sameBranch"
                                           type="checkbox"
                                           class="text-primary-600 rounded border-gray-300 focus:ring-primary-500 align-middle" />

                                    <label for="sameBranch"
                                           class="text-gray-600 cursor-pointer select-none leading-tight">
                                        @L["Same_Branch_Label", "Same location"]
                                    </label>
                                </div>
                            </label>

                            <select id="dropoffBranch"
                                    name="DropoffBranchId"
                                    class="w-full rounded-xl border border-gray-300 bg-white px-4 py-3 text-gray-900
                       focus:border-primary-500 focus:ring-2 focus:ring-primary-200 transition-opacity duration-300"
                                    required>

                                <option value="">
                                    @L["Select_Dropoff_Branch", "Select Drop-off Branch"]
                                </option>

                                @if (ViewBag.Branches != null && ((IEnumerable<dynamic>)ViewBag.Branches).Any())
                                {
                                    foreach (var branch in ViewBag.Branches)
                                    {
                                        <option value="@branch.BranchId">
                                            @branch.BranchName
                                        </option>
                                    }
                                }
                                else
                                {
                                    <option disabled>
                                        @L["No_Branches_Found"]
                                    </option>
                                }
                            </select>
                        </div>

                    </div>

                    <!-- Pickup Date -->
                    <label class="block">
                        <span class="mb-1 block text-sm font-medium text-gray-700">@L["Pickup_Date_Label", "Pickup Date"]</span>
                        <input id="pickupDate"
                               name="StartDate"
                               type="date"
                               class="w-full rounded-xl border border-gray-300 bg-white px-4 py-3 text-gray-900
                                  focus:border-primary-500 focus:ring-2 focus:ring-primary-200"
                               required />
                    </label>

                    <!-- Return Date -->
                    <label class="block">
                        <span class="mb-1 block text-sm font-medium text-gray-700">@L["Return_Date_Label", "Return Date"]</span>
                        <input id="returnDate"
                               name="EndDate"
                               type="date"
                               class="w-full rounded-xl border border-gray-300 bg-white px-4 py-3 text-gray-900
                                  focus:border-primary-500 focus:ring-2 focus:ring-primary-200"
                               required />
                    </label>

                    <!-- Search Button -->
                    <div class="flex items-end">
                        <button type="submit"
                                class="w-full rounded-xl bg-primary-600 px-6 py-3 font-semibold text-white shadow-brand
                                   hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-300">
                            @L["Btn_SearchCars", "Search Cars"]
                        </button>
                    </div>
                </div>

                <!-- Info badges -->
                <div class="mt-3 flex flex-wrap items-center gap-3 text-xs text-gray-500">
                    <span class="inline-flex items-center gap-1 rounded-full bg-gray-100 px-3 py-1">
                        @L["Badge_Unlimited", "Unlimited Mileage"]
                    </span>
                    <span class="inline-flex items-center gap-1 rounded-full bg-gray-100 px-3 py-1">
                        @L["Badge_CDW", "Collision Damage Waiver"]
                    </span>
                    <span class="inline-flex items-center gap-1 rounded-full bg-gray-100 px-3 py-1">
                        @L["Badge_Roadside", "24/7 Roadside Assistance"]
                    </span>
                </div>
            </form>
        </div>
    </div>


    <!-- ===========================
         FLEET
    =========================== -->
