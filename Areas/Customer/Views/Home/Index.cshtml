    </section>


    <!-- ===========================
         TESTIMONIALS
    =========================== -->
    <section class="bg-gray-50 py-16 sm:py-20">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <div class="mb-8 text-center">
                <h2 class="text-2xl sm:text-3xl font-extrabold">@L["Testi_Title", "What Drivers Say"]</h2>
                <p class="mt-2 text-gray-600">@L["Testi_Subtitle", "Real reviews from travelers across Thailand"]</p>
            </div>

            <div class="grid gap-6 md:grid-cols-3">
                <figure class="rounded-2xl border border-gray-100 bg-white p-6 shadow-sm">
                    <blockquote class="text-gray-700">“@L["Testi_1", "Super smooth pickup at BKK. Car was new and clean. Will rent again!"]”</blockquote>
