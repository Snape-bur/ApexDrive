                        <div class="flex items-center justify-between">
                            <span class="text-xl font-extrabold">฿4,500<span class="text-sm font-semibold text-gray-500">/@L["Per_Day", "day"]</span></span>
                            <button class="rounded-lg bg-primary-600 px-4 py-2 text-sm font-semibold text-white hover:bg-primary-700">@L["Btn_Select", "Select"]</button>
                        </div>
                    </div>
                </article>

                @* Card 5 *@
                <article class="group overflow-hidden rounded-2xl bg-white shadow-sm ring-1 ring-gray-100 transition duration-300 hover:-translate-y-1 hover:shadow-xl">
                    <div class="relative h-48 overflow-hidden">
                        <img class="h-full w-full object-cover transition duration-300 group-hover:scale-105"
                             src="@Url.Content("~/images/cls300d_exterior_001-removebg-preview.png")"
                             alt="Mercedes Cls 300d" />
                        <span class="absolute left-3 top-3 rounded-full bg-white/90 px-3 py-1 text-xs font-semibold">Luxury</span>
