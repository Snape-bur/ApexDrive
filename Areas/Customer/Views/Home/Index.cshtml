        <script>
            document.addEventListener("DOMContentLoaded", () => {

                // === DATE LOGIC ===
                const pickup = document.getElementById("pickupDate");
                const ret = document.getElementById("returnDate");
                const today = new Date();
                const iso = d =>
                    new Date(d.getTime() - d.getTimezoneOffset() * 60000)
                        .toISOString()
                        .split("T")[0];

                if (pickup && ret) {
                    pickup.min = iso(today);
                    ret.min = iso(today);

                    pickup.addEventListener("change", () => {
                        if (!pickup.value) return;

                        const p = new Date(pickup.value);
                        const next = new Date(p.getTime() + 24 * 60 * 60 * 1000);

                        if (!ret.value || ret.value < pickup.value)
                            ret.value = iso(next);

                        ret.min = pickup.value;
                    });
                }

                // === SAME BRANCH LOGIC (Fixed for Submission) ===
                const sameBranch = document.getElementById("sameBranch");
                const pickupBranch = document.getElementById("pickupBranch");
                const dropoffBranch = document.getElementById("dropoffBranch");

                if (sameBranch && pickupBranch && dropoffBranch) {

                    const syncBranches = () => {
                        if (sameBranch.checked) {
                            // ✅ Copy pickup → dropoff and visually disable but still submit value
                            dropoffBranch.value = pickupBranch.value;
                            dropoffBranch.setAttribute("data-locked", "true");
                            dropoffBranch.classList.add("opacity-50", "cursor-not-allowed");
                            dropoffBranch.style.pointerEvents = "none"; // keep in form post
                        } else {
                            // ✅ Re-enable dropoff selection
                            dropoffBranch.removeAttribute("data-locked");
                            dropoffBranch.classList.remove("opacity-50", "cursor-not-allowed");
                            dropoffBranch.style.pointerEvents = "auto";
                            dropoffBranch.value = ""; // optional reset
                        }
                    };

                    // ✅ Run immediately on load
                    syncBranches();

                    // ✅ React to changes
                    sameBranch.addEventListener("change", syncBranches);
                    pickupBranch.addEventListener("change", () => {
                        if (sameBranch.checked) {
                            dropoffBranch.value = pickupBranch.value;
                        }
                    });
                }
            });
        </script>
