@model dynamic
@{
    ViewData["Title"] = "Booking Confirmed";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto pb-20 px-4 mt-16">
    <div class="bg-white shadow-2xl shadow-blue-100 rounded-3xl overflow-hidden border border-gray-100">

        <div class="bg-brand/5 px-8 py-12 text-center border-b border-gray-50">
            <div class="mb-6 inline-flex items-center justify-center w-20 h-20 bg-emerald-100 text-emerald-600 rounded-full shadow-lg shadow-emerald-100 animate-bounce">
                <i class="fa-solid fa-check text-4xl"></i>
            </div>
            <h1 class="text-3xl font-black text-gray-900 tracking-tight mb-2">Booking Confirmed</h1>
            <p class="text-gray-500 font-medium">Thank you! Your reservation has been successfully processed.</p>
        </div>

        <div class="p-8 md:p-12">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-10">

                <div class="space-y-6">
                    <h3 class="text-xs font-black uppercase tracking-widest text-brand border-b border-brand/10 pb-2">
                        <i class="fa-solid fa-file-invoice mr-2"></i> Reservation Details
                    </h3>
                    <div class="space-y-4">
                        <div class="flex justify-between">
                            <span class="text-gray-400 text-sm">Booking ID</span>
                            <span class="text-gray-900 font-bold">#@Model.BookingId</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-400 text-sm">Status</span>
                            <span class="px-2 py-0.5 bg-blue-50 text-blue-700 text-[10px] font-black uppercase rounded border border-blue-100">@Model.Status</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-400 text-sm">Vehicle</span>
                            <span class="text-gray-900 font-bold">@Model.CarName</span>
                        </div>
                        <div class="flex justify-between items-start gap-4">
                            <span class="text-gray-400 text-sm whitespace-nowrap">Route</span>
                            <div class="text-right">
                                <p class="text-gray-900 font-bold text-sm">@Model.PickupBranch</p>
                                <i class="fa-solid fa-arrow-down text-[10px] text-gray-300 my-1 block mr-2"></i>
                                <p class="text-gray-900 font-bold text-sm">@Model.DropoffBranch</p>
                            </div>
                        </div>
                        <div class="flex justify-between pt-2 border-t border-gray-50">
                            <span class="text-gray-400 text-sm">Period</span>
                            <span class="text-gray-700 font-medium text-sm">@Model.StartDate – @Model.EndDate</span>
                        </div>
                    </div>
                </div>

                <div class="bg-gray-50 rounded-2xl p-6 border border-gray-100">
                    <h3 class="text-xs font-black uppercase tracking-widest text-gray-400 mb-6 flex items-center gap-2">
                        <i class="fa-solid fa-credit-card text-brand"></i> Payment Summary
                    </h3>
                    <div class="space-y-4">
                        <div class="flex justify-between text-sm">
                            <span class="text-gray-500">Base Rental Cost</span>
                            <span class="font-bold text-gray-800">@Model.BaseCost.ToString("C")</span>
                        </div>
                        <div class="flex justify-between text-sm">
                            <span class="text-gray-500">Add-ons & Extras</span>
                            <span class="font-bold text-gray-800">@Model.ExtrasCost.ToString("C")</span>
                        </div>
                        <div class="pt-4 border-t border-gray-200 flex justify-between items-center">
                            <span class="text-gray-900 font-black uppercase text-xs">Total Charged</span>
                            <span class="text-2xl font-black text-gray-900">@Model.TotalCost.ToString("C")</span>
                        </div>

                        <div class="mt-6 space-y-3 pt-6 border-t border-dashed border-gray-300">
                            <div class="flex justify-between items-center">
                                <span class="text-[10px] font-black uppercase text-gray-400">Method</span>
                                <span class="text-xs font-bold text-gray-700">
                                    <i class="fa-solid fa-wallet mr-1 text-gray-400"></i> @Model.PaymentMethod
                                </span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-[10px] font-black uppercase text-gray-400">Payment Status</span>
                                @{
                                    var statusColor = Model.PaymentStatus == "Paid" ? "text-emerald-600 bg-emerald-50 border-emerald-100" : "text-amber-600 bg-amber-50 border-amber-100";
                                    var statusIcon = Model.PaymentStatus == "Paid" ? "fa-circle-check" : "fa-clock";
                                }
                                <span class="px-3 py-1 rounded-full text-[10px] font-black uppercase border @statusColor">
                                    <i class="fa-solid @statusIcon mr-1"></i> @Model.PaymentStatus
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-12 flex flex-col sm:flex-row items-center justify-center gap-4">
                <a asp-area="Customer" asp-controller="Booking" asp-action="MyBookings"
                   class="inline-flex items-center gap-2 px-10 py-4 bg-brand text-white rounded-2xl font-bold hover:bg-blue-700 transition-all shadow-xl shadow-blue-100">
                    <i class="fa-solid fa-list-check"></i>
                    Go to My Bookings
                </a>
                <button onclick="window.print()" class="inline-flex items-center gap-2 px-8 py-4 bg-gray-100 text-gray-600 rounded-2xl font-bold hover:bg-gray-200 transition-all">
                    <i class="fa-solid fa-print"></i>
                    Print Receipt
                </button>
            </div>
        </div>

        <div class="bg-gray-900 p-6 text-center">
            <p class="text-gray-400 text-xs font-medium">
                Need help with your booking?
                <a href="/Support" class="text-brand font-bold hover:underline ml-1">Contact our 24/7 Support Team</a>
            </p>
        </div>
    </div>
</div>

<style>
    @@media print {
        nav, footer, button, .bg-gray-900 {
            display: none !important;
        }

        .max-w-3xl {
            margin: 0 !important;
            max-width: 100% !important;
        }

        .bg-white {
            border: none !important;
            shadow: none !important;
        }
    }
</style>