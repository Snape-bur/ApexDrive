@model ApexDrive.Areas.Customer.Controllers.BookingController.BookingExtrasViewModel
@{
    ViewData["Title"] = "Insurance & Accessories";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}

<div class="max-w-6xl mx-auto px-4 mt-10">
    <div class="flex justify-between text-sm font-medium">

        <div class="flex-1 text-center border-b-2 border-gray-200 pb-2">
            <span class="inline-flex items-center justify-center w-6 h-6 mr-2 rounded-full bg-blue-600 text-white text-xs font-bold">
                ✓
            </span>
            Booking Form
        </div>

        <div class="flex-1 text-center border-b-2 border-gray-200 pb-2">
            <span class="inline-flex items-center justify-center w-6 h-6 mr-2 rounded-full bg-blue-600 text-white text-xs font-bold">
                ✓
            </span>
            Vehicle Selection
        </div>

        <div class="flex-1 text-center border-b-2 border-blue-600 text-blue-600 pb-2">
            <span class="inline-flex items-center justify-center w-6 h-6 mr-2 rounded-full bg-blue-600 text-white text-xs font-bold">
                3
            </span>
            Insurance & Accessories
        </div>

        <div class="flex-1 text-center border-b-2 border-gray-200 pb-2">
            <span class="inline-flex items-center justify-center w-6 h-6 mr-2 rounded-full bg-gray-300 text-white text-xs font-bold">
                4
            </span>
            Payment
        </div>

    </div>
</div>


<div class="max-w-6xl mx-auto px-4 mt-10">
    <div class="bg-white rounded-2xl shadow p-8 space-y-8">

        <div class="grid sm:grid-cols-2 gap-6">
            <div class="p-4 rounded-lg border bg-gray-50">
                <h3 class="text-sm font-semibold text-gray-700 mb-1">Selected Car</h3>
                <p class="text-gray-800 font-bold">@Model.CarDisplayName</p>
                @* Changed currency symbol and format to Baht *@
                <p class="text-sm text-gray-500 font-medium">Rate: ฿@Model.CarDailyRate.ToString("N2") / day</p>
            </div>

            <div class="p-4 rounded-lg border bg-gray-50">
                <h3 class="text-sm font-semibold text-gray-700 mb-1">Rental Window</h3>
                <p class="text-gray-800 font-bold">@Model.StartDate.ToString("dd MMM yyyy") → @Model.EndDate.ToString("dd MMM yyyy")</p>
            </div>
        </div>

        <form asp-action="Step3_Extras" method="post" class="space-y-6">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="CarId" />

            <div>
                <h2 class="text-lg font-semibold mb-3 text-gray-800">Insurance Options</h2>
                <div class="space-y-3">
                    <label class="flex items-center gap-3 p-4 border rounded-xl cursor-pointer hover:bg-gray-50 transition-colors">
                        <input type="radio" name="InsuranceType" value="Basic" @(Model.InsuranceType == "Basic" ? "checked" : "") class="w-4 h-4 text-blue-600 focus:ring-blue-500" />
                        <div>
                            <p class="font-bold text-gray-900">Basic Coverage</p>
                            <p class="text-sm text-gray-500">Included standard coverage. Covers damages up to a limit.</p>
                        </div>
                        <span class="ml-auto font-black text-emerald-600">฿0/day</span>
                    </label>

                    <label class="flex items-center gap-3 p-4 border rounded-xl cursor-pointer hover:bg-gray-50 transition-colors">
                        <input type="radio" name="InsuranceType" value="Standard" @(Model.InsuranceType == "Standard" ? "checked" : "") class="w-4 h-4 text-blue-600 focus:ring-blue-500" />
                        <div>
                            <p class="font-bold text-gray-900">Standard Protection</p>
                            <p class="text-sm text-gray-500">Includes theft protection and lower excess fees.</p>
                        </div>
                        @* Converted $10 to ~350 Baht *@
                        <span class="ml-auto font-black text-gray-900">฿350/day</span>
                    </label>

                    <label class="flex items-center gap-3 p-4 border rounded-xl cursor-pointer border-blue-100 bg-blue-50/30 hover:bg-blue-50 transition-colors">
                        <input type="radio" name="InsuranceType" value="Premium" @(Model.InsuranceType == "Premium" ? "checked" : "") class="w-4 h-4 text-blue-600 focus:ring-blue-500" />
                        <div>
                            <p class="font-bold text-gray-900">Premium Full Coverage</p>
                            <p class="text-sm text-gray-500">Zero liability, full theft protection, and 24/7 roadside assistance.</p>
                        </div>
                        @* Converted $20 to ~700 Baht *@
                        <span class="ml-auto font-black text-gray-900">฿700/day</span>
                    </label>
                </div>
            </div>

            <div>
                <h2 class="text-lg font-semibold mb-3 text-gray-800">Additional Accessories</h2>
                <label class="flex items-center gap-3 p-4 border rounded-xl hover:bg-gray-50 transition-colors cursor-pointer">
                    <input type="checkbox" asp-for="HasChildSeat" class="w-5 h-5 rounded border-gray-300 text-blue-600 focus:ring-blue-500" />
                    <span class="font-bold text-gray-700">Add Child Seat</span>
                    @* Converted $7 to ~250 Baht *@
                    <span class="ml-auto font-bold text-gray-500">+ ฿250/day</span>
                </label>
            </div>

            <div class="flex items-center justify-end gap-3 pt-6 border-t border-gray-100">
                <a asp-area="Customer" asp-controller="Booking" asp-action="Step2_SelectCar"
                   class="px-6 py-2.5 rounded-xl border border-gray-300 text-gray-700 font-bold hover:bg-gray-50 transition">
                    ← Back
                </a>

                <button type="submit"
                        class="px-8 py-2.5 rounded-xl bg-blue-600 text-white font-black hover:bg-blue-700 transition shadow-lg shadow-blue-100">
                    Continue to Payment →
                </button>
            </div>
        </form>
    </div>
</div>