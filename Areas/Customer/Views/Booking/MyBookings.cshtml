@model IEnumerable<ApexDrive.Models.Booking>
@{
    ViewData["Title"] = "My Bookings";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}

<div class="max-w-6xl mx-auto mt-12 px-4 pb-20">
    <div class="flex items-center gap-3 mb-8">
        <div class="bg-blue-600 p-2 rounded-lg">
            <i class="fa-solid fa-car-side text-white text-xl"></i>
        </div>
        <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">My Bookings</h1>
    </div>

    @if (!Model.Any())
    {
        <div class="bg-white border-2 border-dashed border-gray-200 p-12 rounded-3xl text-center">
            <div class="bg-gray-50 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fa-solid fa-calendar-xmark text-gray-400 text-2xl"></i>
            </div>
            <h3 class="text-lg font-semibold text-gray-900">No bookings found</h3>
            <p class="text-gray-500 mb-6">You haven’t made any car reservations yet.</p>
            <a asp-area="Customer" asp-controller="Booking" asp-action="Index"
               class="inline-flex items-center gap-2 bg-blue-600 text-white px-6 py-3 rounded-xl font-bold hover:bg-blue-700 transition-all shadow-lg shadow-blue-200">
                <i class="fa-solid fa-plus text-sm"></i>
                Start a New Booking
            </a>
        </div>
    }
    else
    {
        <div class="grid gap-6">
            @foreach (var b in Model)
            {
                var statusClasses = b.Status switch
                {
                    ApexDrive.Models.BookingStatus.Pending => "bg-amber-50 text-amber-700 border-amber-200",
                    ApexDrive.Models.BookingStatus.Confirmed => "bg-blue-50 text-blue-700 border-blue-200",
                    ApexDrive.Models.BookingStatus.Active => "bg-indigo-50 text-indigo-700 border-indigo-200",
                    ApexDrive.Models.BookingStatus.Completed => "bg-emerald-50 text-emerald-700 border-emerald-200",
                    ApexDrive.Models.BookingStatus.Cancelled => "bg-red-50 text-red-700 border-red-200",
                    _ => "bg-gray-50 text-gray-700 border-gray-200"
                };

                <div class="group bg-white rounded-2xl shadow-sm border border-gray-100 hover:border-blue-300 transition-all overflow-hidden flex flex-col md:flex-row">
                    <div class="relative w-full md:w-64 h-48 md:h-auto overflow-hidden">
                        <img src="@b.Car?.ImageUrl" alt="@b.Car?.Model" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
                        <div class="absolute top-3 left-3">
                            <span class="px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider border @statusClasses">
                                @b.Status
                            </span>
                        </div>
                    </div>

                    <div class="flex-1 p-6">
                        <div class="flex flex-col lg:flex-row lg:items-center justify-between mb-4 gap-4">
                            <div>
                                <h2 class="text-2xl font-bold text-gray-900 group-hover:text-blue-600 transition-colors">@b.Car?.Brand @b.Car?.Model</h2>
                                <p class="text-sm font-medium text-gray-400 flex items-center gap-2 uppercase tracking-widest">
                                    <i class="fa-solid fa-id-card"></i> @b.Car?.PlateNumber
                                </p>
                            </div>
                            <div class="text-left lg:text-right">
                                <p class="text-xs text-gray-400 uppercase font-bold tracking-widest mb-1">Total Amount</p>
                                <p class="text-2xl font-black text-gray-900">@b.TotalCost.ToString("C")</p>
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-y-4 gap-x-8 py-4 border-t border-gray-50">
                            <div class="space-y-3">
                                <div class="flex items-start gap-3">
                                    <i class="fa-solid fa-location-dot text-blue-500 mt-1"></i>
                                    <div>
                                        <p class="text-xs text-gray-400 font-bold uppercase">Pick-up</p>
                                        <p class="text-sm text-gray-700 font-semibold">@b.PickupBranch?.BranchName</p>
                                        <p class="text-xs text-gray-500">@b.StartDate.ToString("ddd, dd MMM yyyy")</p>
                                    </div>
                                </div>
                                <div class="flex items-start gap-3">
                                    <i class="fa-solid fa-flag-checkered text-gray-400 mt-1"></i>
                                    <div>
                                        <p class="text-xs text-gray-400 font-bold uppercase">Drop-off</p>
                                        <p class="text-sm text-gray-700 font-semibold">@b.DropoffBranch?.BranchName</p>
                                        <p class="text-xs text-gray-500">@b.EndDate.ToString("ddd, dd MMM yyyy")</p>
                                    </div>
                                </div>
                            </div>

                            <div class="bg-gray-50 rounded-xl p-4 self-center">
                                <div class="flex items-center justify-between mb-2">
                                    <span class="text-xs font-bold text-gray-400 uppercase tracking-tighter">Payment Status</span>
                                    <span class="flex items-center gap-1.5 text-xs font-bold @(b.Payment?.Status == "Paid" ? "text-emerald-600" : "text-amber-600")">
                                        <i class="fa-solid @(b.Payment?.Status == "Paid" ? "fa-circle-check" : "fa-circle-exclamation")"></i>
                                        @(b.Payment?.Status ?? "Pending")
                                    </span>
                                </div>
                                <div class="flex items-center gap-2 text-sm text-gray-600 font-medium">
                                    <i class="fa-solid fa-credit-card text-gray-400"></i>
                                    @b.Payment?.Method
                                </div>
                            </div>
                        </div>

                        <div class="mt-6 flex flex-wrap items-center justify-between gap-4 pt-4 border-t border-gray-50">
                            <a asp-action="BookingConfirmed" asp-route-id="@b.BookingId"
                               class="inline-flex items-center gap-2 px-5 py-2.5 bg-gray-900 text-white rounded-xl text-sm font-bold hover:bg-gray-800 transition-colors">
                                <i class="fa-solid fa-circle-info"></i>
                                Details
                            </a>

                            @if (b.Status == ApexDrive.Models.BookingStatus.Pending)
                            {
                                <form asp-action="Cancel" method="post" class="inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@b.BookingId" />
                                    <button type="submit"
                                            class="inline-flex items-center gap-2 px-5 py-2.5 bg-red-50 text-red-600 rounded-xl text-sm font-bold hover:bg-red-100 transition-colors">
                                        <i class="fa-solid fa-xmark"></i>
                                        Cancel Booking
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>