@model IEnumerable<ApexDrive.Models.Booking>
@{
    ViewData["Title"] = "My Bookings";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}

<div class="max-w-6xl mx-auto mt-20 px-4">
    <h1 class="text-3xl font-bold text-blue-700 mb-8">🚘 My Bookings</h1>

    @if (!Model.Any())
    {
        <div class="bg-white shadow-sm p-6 rounded-xl text-center text-gray-600">
            <p>You haven’t made any bookings yet.</p>
            <a asp-area="Customer" asp-controller="Booking" asp-action="Index"
               class="mt-3 inline-block bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
                ➕ Start a New Booking
            </a>
        </div>
    }
    else
    {
        <div class="space-y-6">
            @foreach (var b in Model)
            {
                var color = b.Status switch
                {
                    ApexDrive.Models.BookingStatus.Pending => "bg-yellow-100 text-yellow-700",
                    ApexDrive.Models.BookingStatus.Confirmed => "bg-blue-100 text-blue-700",
                    ApexDrive.Models.BookingStatus.Active => "bg-emerald-100 text-emerald-700",
                    ApexDrive.Models.BookingStatus.Completed => "bg-green-100 text-green-700",
                    ApexDrive.Models.BookingStatus.Cancelled => "bg-red-100 text-red-700",
                    _ => "bg-gray-100 text-gray-700"
                };

                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 flex flex-col md:flex-row gap-6">
                    <!-- Car Image -->
                    <img src="@b.Car?.ImageUrl" alt="@b.Car?.Model"
                         class="w-full md:w-48 h-32 object-cover rounded-xl shadow-sm" />

                    <!-- Booking Info -->
                    <div class="flex-1 space-y-2 text-gray-700">
                        <div class="flex justify-between items-center">
                            <h2 class="text-xl font-bold text-gray-900">@b.Car?.Brand @b.Car?.Model</h2>
                            <span class="px-2 py-1 rounded-lg text-xs font-semibold @color">@b.Status</span>
                        </div>

                        <p class="text-sm text-gray-500">@b.Car?.PlateNumber</p>

                        <div class="text-sm">
                            <p><strong>Pick-up:</strong> @b.PickupBranch?.BranchName (@b.StartDate.ToString("dd MMM yyyy"))</p>
                            <p><strong>Drop-off:</strong> @b.DropoffBranch?.BranchName (@b.EndDate.ToString("dd MMM yyyy"))</p>
                        </div>

                        <div class="text-sm">
                            <p>
                                <strong>Payment:</strong>
                                <span class="@(b.Payment?.Status == "Paid" ? "text-green-600" : "text-yellow-600") font-medium">
                                    @b.Payment?.Status ?? "Pending"
                                </span>
                                — @b.Payment?.Method
                            </p>
                        </div>

                        <div class="text-sm font-semibold text-gray-800">
                            Total: @b.TotalCost.ToString("C")
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="flex flex-col items-end justify-between">
                        <a asp-action="BookingConfirmed" asp-route-id="@b.BookingId"
                           class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg text-sm font-medium">
                            🔍 View Details
                        </a>

                        @if (b.Status == ApexDrive.Models.BookingStatus.Pending)
                        {
                            <form asp-action="Cancel" method="post" class="inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@b.BookingId" />
                                <button type="submit"
                                        class="mt-2 px-4 py-2 bg-red-100 hover:bg-red-200 text-red-700 rounded-lg text-sm font-medium">
                                    ❌ Cancel Booking
                                </button>
                            </form>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>
