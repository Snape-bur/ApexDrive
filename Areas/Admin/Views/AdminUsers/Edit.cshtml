@model ApexDrive.Models.ViewModels.EditAdminUserViewModel
@{
    ViewData["Title"] = "Edit Admin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-2xl mx-auto pb-10">
    <a asp-action="Index" class="inline-flex items-center gap-2 text-sm font-semibold text-gray-500 hover:text-brand transition-colors mb-6 group">
        <i class="fa-solid fa-arrow-left group-hover:-translate-x-1 transition-transform"></i>
        Back to Admin List
    </a>

    <div class="bg-white rounded-3xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="bg-gray-50/50 px-8 py-6 border-b border-gray-100">
            <div class="flex items-center gap-4">
                <div class="bg-brand p-3 rounded-2xl shadow-lg shadow-blue-100">
                    <i class="fa-solid fa-user-pen text-white text-xl"></i>
                </div>
                <div>
                    <h1 class="text-2xl font-black text-gray-900 tracking-tight">Edit Admin</h1>
                    <p class="text-sm text-gray-500 font-medium">Update profile information and branch access for this administrator.</p>
                </div>
            </div>
        </div>

        <form asp-action="Edit" method="post" class="p-8 space-y-6">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="space-y-2">
                <label asp-for="FullName" class="text-xs font-black uppercase tracking-widest text-gray-400 ml-1">Full Name</label>
                <div class="relative group">
                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-gray-400 group-focus-within:text-brand transition-colors">
                        <i class="fa-solid fa-id-card"></i>
                    </div>
                    <input asp-for="FullName" class="block w-full pl-11 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-brand/20 focus:border-brand transition-all outline-none" />
                </div>
                <span asp-validation-for="FullName" class="text-xs text-red-500 font-medium"></span>
            </div>

            <div class="space-y-2">
                <label asp-for="Email" class="text-xs font-black uppercase tracking-widest text-gray-400 ml-1">Email Address</label>
                <div class="relative group">
                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-gray-400 group-focus-within:text-brand transition-colors">
                        <i class="fa-solid fa-envelope"></i>
                    </div>
                    <input asp-for="Email" class="block w-full pl-11 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-brand/20 focus:border-brand transition-all outline-none" />
                </div>
                <span asp-validation-for="Email" class="text-xs text-red-500 font-medium"></span>
            </div>

            <div class="space-y-2">
                <label asp-for="BranchId" class="text-xs font-black uppercase tracking-widest text-gray-400 ml-1">Assigned Branch</label>
                <div class="relative group">
                    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-gray-400 group-focus-within:text-brand transition-colors">
                        <i class="fa-solid fa-building-circle-check"></i>
                    </div>
                    <select asp-for="BranchId"
                            asp-items="@(new SelectList(ViewBag.Branches, "BranchId", "BranchName"))"
                            class="block w-full pl-11 pr-10 py-3 bg-gray-50 border border-gray-200 rounded-xl text-sm appearance-none focus:ring-2 focus:ring-brand/20 focus:border-brand transition-all outline-none cursor-pointer">
                        <option value="">-- Select Branch --</option>
                    </select>
                    <div class="absolute inset-y-0 right-0 pr-4 flex items-center pointer-events-none text-gray-400">
                        <i class="fa-solid fa-chevron-down text-xs"></i>
                    </div>
                </div>
                <span asp-validation-for="BranchId" class="text-xs text-red-500 font-medium"></span>
            </div>

            <div class="mt-10 pt-8 border-t border-gray-100 flex items-center justify-end gap-3">
                <a asp-action="Index" class="px-6 py-2.5 rounded-xl text-sm font-bold text-gray-500 hover:bg-gray-100 transition-all">
                    Discard Changes
                </a>
                <button type="submit" class="inline-flex items-center gap-2 bg-brand text-white px-8 py-2.5 rounded-xl font-bold hover:bg-blue-700 transition-all shadow-lg shadow-blue-100">
                    <i class="fa-solid fa-floppy-disk"></i>
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}