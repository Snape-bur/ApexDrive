@model List<(ApexDrive.Models.AppUser user, IList<string> roles)>

@{
    ViewData["Title"] = "Admin Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto pb-10">
    <div class="mb-8 flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <div class="flex items-center gap-3 mb-1">
                <div class="bg-brand/10 p-2 rounded-lg text-brand">
                    <i class="fa-solid fa-user-shield text-xl"></i>
                </div>
                <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">Admin Management</h1>
            </div>
            <p class="text-gray-500 text-sm px-1">Control system access and manage administrative privileges.</p>
        </div>

        <a asp-action="Create"
           class="inline-flex items-center gap-2 bg-brand text-white px-5 py-2.5 rounded-xl font-bold hover:bg-blue-700 transition-all shadow-lg shadow-blue-100">
            <i class="fa-solid fa-user-plus text-xs"></i>
            Add New Admin
        </a>
    </div>

    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-100">
                <thead class="bg-gray-50/50">
                    <tr>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">User Details</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Permissions / Roles</th>
                        <th class="py-4 px-6 text-right text-[11px] uppercase tracking-widest font-black text-gray-400">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-50">
                    @foreach (var (user, roles) in Model)
                    {
                        <tr class="group hover:bg-blue-50/30 transition-colors">
                            <td class="py-4 px-6">
                                <div class="flex items-center gap-3">
                                    <div class="h-10 w-10 rounded-full bg-gray-100 flex items-center justify-center text-gray-400 group-hover:bg-brand group-hover:text-white transition-all">
                                        <i class="fa-solid fa-user"></i>
                                    </div>
                                    <div class="flex flex-col">
                                        <span class="font-bold text-gray-900">@user.FullName</span>
                                        <span class="text-xs text-gray-500">@user.Email</span>
                                    </div>
                                </div>
                            </td>
                            <td class="py-4 px-6">
                                <div class="flex flex-wrap gap-1">
                                    @foreach (var role in roles)
                                    {
                                        var roleColor = role == "SuperAdmin" ? "bg-indigo-100 text-indigo-700 border-indigo-200" : "bg-blue-100 text-blue-700 border-blue-200";
                                        <span class="px-2 py-0.5 rounded-md border text-[10px] font-bold uppercase tracking-tight @roleColor">
                                            @role
                                        </span>
                                    }
                                </div>
                            </td>
                            <td class="py-4 px-6 text-right">
                                <div class="flex items-center justify-end gap-2">
                                    <a asp-action="Details" asp-route-id="@user.Id"
                                       class="h-8 w-8 inline-flex items-center justify-center rounded-lg bg-gray-100 text-gray-500 hover:bg-brand hover:text-white transition-all shadow-sm"
                                       title="View Details">
                                        <i class="fa-solid fa-circle-info text-xs"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@user.Id"
                                       class="h-8 w-8 inline-flex items-center justify-center rounded-lg bg-emerald-50 text-emerald-600 hover:bg-emerald-600 hover:text-white transition-all shadow-sm"
                                       title="Edit Admin">
                                        <i class="fa-solid fa-pen-to-square text-xs"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@user.Id"
                                       class="h-8 w-8 inline-flex items-center justify-center rounded-lg bg-red-50 text-red-600 hover:bg-red-600 hover:text-white transition-all shadow-sm"
                                       title="Delete Admin">
                                        <i class="fa-solid fa-trash-can text-xs"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="p-16 text-center">
                <div class="bg-gray-50 h-20 w-20 rounded-full flex items-center justify-center mx-auto mb-4 text-gray-300 border-2 border-dashed border-gray-200">
                    <i class="fa-solid fa-users-slash text-3xl"></i>
                </div>
                <h3 class="text-gray-900 font-bold text-lg">No administrators found</h3>
                <p class="text-gray-500 text-sm max-w-xs mx-auto mt-1">There are currently no additional administrative accounts registered.</p>
            </div>
        }
    </div>
</div>