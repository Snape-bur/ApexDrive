@model ApexDrive.Models.AppUser
@{
    ViewData["Title"] = "Delete Admin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-2xl font-bold text-red-600 mb-6">🗑️ Delete Admin</h1>

<div class="bg-white p-6 rounded-xl shadow-md max-w-lg">
    <p class="text-gray-700 mb-4">
        Are you sure you want to delete the admin <strong>@Model.Email</strong>?
    </p>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit"
                class="px-4 py-2 bg-red-600 text-white rounded-lg shadow hover:bg-red-700 transition">
            Confirm Delete
        </button>
        <a asp-action="Index" class="ml-3 text-gray-600 hover:underline">Cancel</a>
    </form>
</div>
