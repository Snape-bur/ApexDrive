@model ApexDrive.Models.ViewModels.AddAdminUserViewModel
@{
    ViewData["Title"] = "Add New Admin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-2xl font-bold text-brand mb-6">➕ Add New Admin</h1>

<form asp-action="Create" method="post" class="bg-white p-6 rounded-xl shadow-md max-w-lg space-y-5">
    @Html.AntiForgeryToken()

    <div>
        <label asp-for="FullName" class="block text-sm font-medium text-gray-700">Full Name</label>
        <input asp-for="FullName" class="form-input w-full border-gray-300 rounded-lg mt-1 p-2" />
        <span asp-validation-for="FullName" class="text-red-500 text-sm"></span>
    </div>

    <!-- Email -->
    <div>
        <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
        <input asp-for="Email" class="form-input w-full border-gray-300 rounded-lg mt-1 p-2" placeholder="e.g. admin@branch.com" />
        <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
    </div>

    <!-- Password -->
    <div>
        <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
        <input asp-for="Password" type="password" class="form-input w-full border-gray-300 rounded-lg mt-1 p-2" placeholder="********" />
        <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
    </div>

    <!-- Branch Dropdown -->
    <div>
        <label asp-for="BranchId" class="block text-sm font-medium text-gray-700 mb-1">Branch</label>
        <select asp-for="BranchId"
                asp-items="@(new SelectList(ViewBag.Branches, "BranchId", "BranchName"))"
                class="form-select w-full border-gray-300 rounded-lg px-3 py-2 focus:ring-blue-500 focus:border-blue-500">
            <option value="">-- Select Branch --</option>
        </select>
        <span asp-validation-for="BranchId" class="text-red-500 text-sm"></span>
    </div>

    <!-- Buttons -->
    <div class="flex items-center gap-3 pt-4">
        <button type="submit"
                class="px-5 py-2 bg-brand text-white rounded-lg shadow hover:bg-blue-700 transition">
            Create Admin
        </button>
        <a asp-action="Index"
           class="px-4 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100 transition-all">
            Cancel
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
