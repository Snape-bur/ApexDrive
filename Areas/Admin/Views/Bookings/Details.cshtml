@model ApexDrive.Models.Booking
@{
    ViewData["Title"] = $"Booking #{Model.BookingId} Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto pb-20">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
        <div class="flex items-center gap-3">
            <div class="bg-brand/10 p-2 rounded-lg">
                <i class="fa-solid fa-file-invoice text-brand text-xl"></i>
            </div>
            <h1 class="text-3xl font-black text-gray-900 tracking-tight">Booking Ref: #@Model.BookingId</h1>
        </div>
        <div class="flex gap-2">
            @{
                string badgeClass = Model.Status switch
                {
                    ApexDrive.Models.BookingStatus.Pending => "bg-amber-50 text-amber-700 border-amber-200",
                    ApexDrive.Models.BookingStatus.Confirmed => "bg-blue-50 text-blue-700 border-blue-200",
                    ApexDrive.Models.BookingStatus.Active => "bg-indigo-50 text-indigo-700 border-indigo-200",
                    ApexDrive.Models.BookingStatus.Completed => "bg-emerald-50 text-emerald-700 border-emerald-200",
                    ApexDrive.Models.BookingStatus.Cancelled => "bg-red-50 text-red-700 border-red-200",
                    _ => "bg-gray-50 text-gray-700 border-gray-200"
                };
            }
            <span class="px-4 py-2 rounded-xl text-xs font-black uppercase tracking-widest border @badgeClass shadow-sm">
                @Model.Status
            </span>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2 space-y-8">
            <div class="bg-white rounded-3xl p-8 border border-gray-100 shadow-sm relative overflow-hidden">
                <h3 class="text-xs font-black uppercase tracking-widest text-gray-400 mb-6 flex items-center gap-2">
                    <i class="fa-solid fa-timeline text-brand"></i> Rental Timeline
                </h3>
                <div class="flex flex-col md:flex-row items-center justify-between gap-8 relative">
                    <div class="flex-1 text-center md:text-left">
                        <p class="text-[10px] font-black uppercase text-gray-400 mb-1">Pickup</p>
                        <p class="text-lg font-bold text-gray-900">@Model.PickupBranch?.BranchName</p>
                        <p class="text-sm text-gray-500">@Model.StartDate.ToString("ddd, dd MMM yyyy")</p>
                    </div>
                    <div class="hidden md:flex flex-col items-center flex-shrink-0">
                        <div class="h-10 w-10 rounded-full bg-brand/10 flex items-center justify-center text-brand border border-brand/20">
                            <i class="fa-solid fa-arrow-right"></i>
                        </div>
                    </div>
                    <div class="flex-1 text-center md:text-right">
                        <p class="text-[10px] font-black uppercase text-gray-400 mb-1">Drop-off</p>
                        <p class="text-lg font-bold text-gray-900">@Model.DropoffBranch?.BranchName</p>
                        <p class="text-sm text-gray-500">@Model.EndDate.ToString("ddd, dd MMM yyyy")</p>
                    </div>
                </div>
                <div class="mt-8 pt-6 border-t border-gray-50 flex justify-between items-center text-[11px] font-bold text-gray-400 uppercase tracking-tighter">
                    <span>Logged System: @Model.CreatedAt.ToString("g")</span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div class="bg-white rounded-3xl p-6 border border-gray-100 shadow-sm">
                    <h3 class="text-xs font-black uppercase tracking-widest text-gray-400 mb-4 flex items-center gap-2">
                        <i class="fa-solid fa-car text-brand"></i> Vehicle Details
                    </h3>
                    <div class="flex items-start gap-4 mb-4">
                        <div class="h-16 w-16 bg-gray-50 rounded-2xl flex items-center justify-center text-brand text-2xl border border-gray-100">
                            <i class="fa-solid fa-car-rear"></i>
                        </div>
                        <div>
                            <p class="text-lg font-bold text-gray-900">@Model.Car?.Brand @Model.Car?.Model</p>
                            <p class="text-xs font-black text-brand bg-brand/10 px-2 py-0.5 rounded w-fit uppercase tracking-widest">@Model.Car?.PlateNumber</p>
                        </div>
                    </div>
                    <div class="space-y-2 border-t border-gray-50 pt-4">
                        <div class="flex justify-between text-sm"><span class="text-gray-400">Station</span> <span class="font-semibold text-gray-700">@Model.Car?.Branch?.BranchName</span></div>
                        <div class="flex justify-between text-sm"><span class="text-gray-400">Rate</span> <span class="font-semibold text-gray-700">@Model.Car?.DailyRate.ToString("C")/day</span></div>
                    </div>
                </div>

                <div class="bg-white rounded-3xl p-6 border border-gray-100 shadow-sm">
                    <h3 class="text-xs font-black uppercase tracking-widest text-gray-400 mb-4 flex items-center gap-2">
                        <i class="fa-solid fa-user-tag text-brand"></i> Customer Profile
                    </h3>
                    <p class="text-lg font-bold text-gray-900 mb-1">@Model.Customer?.FullName</p>
                    <div class="space-y-2 text-sm text-gray-600">
                        <p class="flex items-center gap-2"><i class="fa-solid fa-envelope text-xs opacity-40"></i> @Model.Customer?.Email</p>
                        <p class="flex items-center gap-2"><i class="fa-solid fa-phone text-xs opacity-40"></i> @Model.Customer?.PhoneNumber</p>
                        <p class="text-xs opacity-60 leading-tight">@Model.Customer?.Address</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="space-y-8">
            <div class="bg-white rounded-3xl border border-gray-100 shadow-sm overflow-hidden">
                <div class="p-6">
                    <h3 class="text-xs font-black uppercase tracking-widest text-gray-400 mb-6 flex items-center gap-2">
                        <i class="fa-solid fa-credit-card text-brand"></i> Financial Summary
                    </h3>
                    <div class="space-y-4">
                        <div class="flex justify-between items-center p-3 bg-gray-50 rounded-2xl border border-gray-100">
                            <span class="text-xs font-bold text-gray-400 uppercase">Payment Status</span>
                            <span class="text-sm font-black @(Model.Payment?.Status == "Paid" ? "text-emerald-600" : "text-amber-600")">
                                <i class="fa-solid @(Model.Payment?.Status == "Paid" ? "fa-circle-check" : "fa-circle-exclamation") mr-1"></i>
                                @Model.Payment?.Status
                            </span>
                        </div>
                        <div class="space-y-2">
                            <div class="flex justify-between text-sm"><span class="text-gray-400">Base Rental</span> <span class="font-bold text-gray-700">@Model.BaseCost.ToString("C")</span></div>
                            <div class="flex justify-between text-xl font-black pt-4 border-t border-gray-50 text-gray-900">
                                <span>Total</span> <span>@Model.TotalCost.ToString("C")</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bg-gray-50 p-4 border-t border-gray-100">
                    <a asp-area="Admin" asp-controller="Payments" asp-action="Edit" asp-route-id="@Model.Payment?.PaymentId"
                       class="flex items-center justify-center gap-2 w-full py-3 bg-white border border-gray-200 text-gray-700 rounded-xl text-xs font-black uppercase tracking-widest hover:bg-gray-100 transition-all">
                        <i class="fa-solid fa-gears"></i> Manage Transaction
                    </a>
                </div>
            </div>

            <div class="space-y-3">
                @if (Model.Status == ApexDrive.Models.BookingStatus.Pending)
                {
                    <form asp-action="Confirm" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.BookingId" />
                        <button type="submit" class="w-full py-4 bg-emerald-600 text-white rounded-2xl font-black uppercase tracking-widest text-xs hover:bg-emerald-700 transition-all shadow-lg shadow-emerald-100 flex items-center justify-center gap-2">
                            <i class="fa-solid fa-check"></i> Approve Booking
                        </button>
                    </form>
                    <form asp-action="Cancel" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.BookingId" />
                        <button type="submit" class="w-full py-4 bg-red-50 text-red-600 rounded-2xl font-black uppercase tracking-widest text-xs hover:bg-red-100 transition-all flex items-center justify-center gap-2">
                            <i class="fa-solid fa-xmark"></i> Decline Order
                        </button>
                    </form>
                }
                else if (Model.Status == ApexDrive.Models.BookingStatus.Confirmed)
                {
                    <form asp-action="Complete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.BookingId" />
                        <button type="submit" class="w-full py-4 bg-brand text-white rounded-2xl font-black uppercase tracking-widest text-xs hover:bg-blue-700 transition-all shadow-lg shadow-blue-100 flex items-center justify-center gap-2">
                            <i class="fa-solid fa-flag-checkered"></i> Mark as Returned
                        </button>
                    </form>
                }

                <a asp-action="Index" class="flex items-center justify-center gap-2 w-full py-4 text-gray-400 font-bold text-xs uppercase hover:text-gray-900 transition-all">
                    <i class="fa-solid fa-arrow-left-long"></i> Return to Registry
                </a>
            </div>
        </div>
    </div>
</div>