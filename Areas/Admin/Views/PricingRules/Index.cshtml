@model IEnumerable<ApexDrive.Models.PricingRule>

<div class="max-w-7xl mx-auto pb-10">
    <div class="mb-8 flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <div class="flex items-center gap-3 mb-1">
                <div class="bg-brand/10 p-2 rounded-lg text-brand">
                    <i class="fa-solid fa-tags text-xl"></i>
                </div>
                <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">Dynamic Pricing Rules</h1>
            </div>
            <p class="text-gray-500 text-sm px-1">Configure seasonal multipliers and event-based rate adjustments.</p>
        </div>

        <a asp-action="Create" class="inline-flex items-center gap-2 bg-brand text-white px-5 py-2.5 rounded-xl font-bold hover:bg-blue-700 transition-all shadow-lg shadow-blue-100">
            <i class="fa-solid fa-plus text-xs"></i>
            Add New Rule
        </a>
    </div>

    <div class="bg-white rounded-3xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-100">
                <thead class="bg-gray-50/50">
                    <tr>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Rule Name</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Validity Period</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Multiplier</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Rule Type</th>
                        <th class="py-4 px-6 text-right text-[11px] uppercase tracking-widest font-black text-gray-400">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-50">
                    @foreach (var item in Model)
                    {
                        <tr class="group hover:bg-blue-50/30 transition-colors">
                            <td class="py-4 px-6 font-bold text-gray-900">@item.Name</td>
                            <td class="py-4 px-6">
                                <div class="flex items-center gap-2 text-sm text-gray-600">
                                    @if (item.IsRecurring)
                                    {
                                        <i class="fa-solid fa-arrows-rotate text-brand text-xs"></i>
                                        <span>@item.StartDate.ToString("dd MMM") - @item.EndDate.ToString("dd MMM")</span>
                                    }
                                    else
                                    {
                                        <i class="fa-solid fa-calendar-day text-gray-400 text-xs"></i>
                                        <span>@item.StartDate.ToString("dd MMM yyyy") - @item.EndDate.ToString("dd MMM yyyy")</span>
                                    }
                                </div>
                            </td>
                            <td class="py-4 px-6">
                                <span class="bg-blue-50 text-brand px-3 py-1 rounded-full text-xs font-black border border-blue-100">
                                    @item.Multiplier.ToString("0.0")x
                                </span>
                            </td>
                            <td class="py-4 px-6">
                                <span class="text-xs font-bold text-gray-500 uppercase tracking-tighter">
                                    @(item.IsRecurring ? "Yearly Recurring" : "One-time Event")
                                </span>
                            </td>
                            <td class="py-4 px-6 text-right">
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Permanently delete this pricing rule?');" class="inline">
                                    <button type="submit" class="h-8 px-3 inline-flex items-center gap-2 rounded-lg bg-red-50 text-red-600 hover:bg-red-600 hover:text-white text-[11px] font-black uppercase tracking-widest transition-all">
                                        <i class="fa-solid fa-trash-can text-[10px]"></i>
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-10 p-8 bg-indigo-50/50 rounded-3xl border border-indigo-100 relative overflow-hidden">
        <div class="relative z-10">
            <h3 class="text-xs font-black text-indigo-900 mb-6 uppercase tracking-[0.2em] flex items-center gap-2">
                <i class="fa-solid fa-microchip text-indigo-500"></i>
                System Logic (Always Active)
            </h3>
            <div class="grid md:grid-cols-2 gap-6">
                <div class="bg-white p-5 rounded-2xl shadow-sm border border-indigo-100/50">
                    <div class="flex items-center gap-3 mb-2">
                        <i class="fa-solid fa-sun text-amber-500"></i>
                        <p class="text-sm font-black text-gray-800">Automatic Weekend Surge</p>
                    </div>
                    <p class="text-xs text-gray-500 leading-relaxed">A 1.1x multiplier is automatically applied to Saturday and Sunday rentals to maximize weekend revenue yield.</p>
                </div>
                <div class="bg-white p-5 rounded-2xl shadow-sm border border-indigo-100/50">
                    <div class="flex items-center gap-3 mb-2">
                        <i class="fa-solid fa-hourglass-half text-indigo-500"></i>
                        <p class="text-sm font-black text-gray-800">Smart Duration Discount</p>
                    </div>
                    <p class="text-xs text-gray-500 leading-relaxed">Bookings of 7 days or longer automatically receive a 10% discount to encourage high-utilization long-term rentals.</p>
                </div>
            </div>
        </div>
        <i class="fa-solid fa-chart-line absolute -bottom-10 -right-10 text-[12rem] text-indigo-500/5"></i>
    </div>
</div>