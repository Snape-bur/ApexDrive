@model ApexDrive.Models.PricingRule

@{
    ViewData["Title"] = "Add Pricing Rule";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-4xl mx-auto pb-20">
    <a asp-action="Index" class="inline-flex items-center gap-2 text-sm font-semibold text-gray-500 hover:text-brand transition-colors mb-6 group">
        <i class="fa-solid fa-arrow-left group-hover:-translate-x-1 transition-transform"></i>
        Back to Pricing Registry
    </a>

    <div class="bg-white rounded-3xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="bg-gray-50/50 px-8 py-6 border-b border-gray-100">
            <div class="flex items-center gap-4">
                <div class="bg-brand p-3 rounded-2xl shadow-lg shadow-blue-100 text-white">
                    <i class="fa-solid fa-file-invoice-dollar text-xl"></i>
                </div>
                <div>
                    <h1 class="text-2xl font-black text-gray-900 tracking-tight">Create Pricing Rule</h1>
                    <p class="text-sm text-gray-500 font-medium">Define multipliers for peak seasons or special events.</p>
                </div>
            </div>
        </div>

        <form asp-action="Create" method="post" class="p-8 space-y-8">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="p-4 bg-red-50 border-l-4 border-red-500 text-red-700 text-sm rounded-r-xl"></div>

            <div class="space-y-2">
                <label asp-for="Name" class="text-xs font-black uppercase tracking-widest text-gray-400 ml-1">Rule Name</label>
                <div class="relative group">
                    <i class="fa-solid fa-pen-nib absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-brand transition-colors"></i>
                    <input asp-for="Name" class="block w-full pl-11 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-brand/20 focus:border-brand transition-all outline-none"
                           placeholder="e.g. Christmas Peak 2025" />
                </div>
                <span asp-validation-for="Name" class="text-xs text-red-500 font-medium"></span>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div class="space-y-2">
                    <label asp-for="StartDate" class="text-xs font-black uppercase tracking-widest text-gray-400 ml-1">Activation Date</label>
                    <div class="relative group">
                        <i class="fa-solid fa-calendar-check absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-brand transition-colors"></i>
                        <input asp-for="StartDate" type="date" class="block w-full pl-11 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-brand/20 focus:border-brand transition-all outline-none" />
                    </div>
                </div>

                <div class="space-y-2">
                    <label asp-for="EndDate" class="text-xs font-black uppercase tracking-widest text-gray-400 ml-1">Expiration Date</label>
                    <div class="relative group">
                        <i class="fa-solid fa-calendar-xmark absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-brand transition-colors"></i>
                        <input asp-for="EndDate" type="date" class="block w-full pl-11 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-brand/20 focus:border-brand transition-all outline-none" />
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-start">
                <div class="space-y-2">
                    <label asp-for="Multiplier" class="text-xs font-black uppercase tracking-widest text-gray-400 ml-1">Rate Multiplier</label>
                    <div class="relative group">
                        <i class="fa-solid fa-calculator absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-brand transition-colors"></i>
                        <input asp-for="Multiplier" id="multiplierInput" type="number" step="0.01"
                               class="block w-full pl-11 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-brand/20 focus:border-brand transition-all outline-none font-bold"
                               placeholder="1.0" />
                    </div>
                    <p class="mt-2 text-[10px] text-gray-400 font-bold uppercase tracking-tighter">
                        <i class="fa-solid fa-circle-info mr-1"></i> 1.5 = +50% Surge | 0.8 = -20% Discount
                    </p>
                </div>

                <div class="bg-indigo-50/50 rounded-2xl p-6 border border-indigo-100 shadow-sm relative overflow-hidden">
                    <h4 class="text-indigo-900 font-black text-[10px] uppercase tracking-widest mb-4 flex items-center gap-2">
                        <i class="fa-solid fa-wand-magic-sparkles"></i> Impact Simulation
                    </h4>
                    <div class="flex items-end justify-between relative z-10">
                        <div>
                            <p class="text-[10px] text-indigo-400 font-bold uppercase">Standard Daily</p>
                            <p class="text-sm font-bold text-gray-500 line-through decoration-indigo-200">$100.00</p>
                        </div>
                        <div class="text-right">
                            <p class="text-[10px] text-indigo-400 font-bold uppercase">Adjusted Rate</p>
                            <p id="previewPrice" class="text-3xl font-black text-brand tracking-tighter">$100.00</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-brand/5 p-6 rounded-2xl border border-brand/10 flex items-start gap-4">
                <div class="pt-1">
                    <input asp-for="IsRecurring" type="checkbox" class="h-5 w-5 rounded border-gray-300 text-brand focus:ring-brand" />
                </div>
                <div>
                    <label asp-for="IsRecurring" class="block text-sm font-black text-gray-800 uppercase tracking-tight">Recurring Yearly</label>
                    <p class="text-xs text-gray-500 leading-relaxed">Enable this to automatically apply this rule every year during the selected month and day range.</p>
                </div>
            </div>

            <div class="flex items-center justify-end gap-3 pt-8 border-t border-gray-100">
                <a asp-action="Index" class="px-8 py-3 rounded-xl text-sm font-bold text-gray-400 hover:text-gray-900 transition-all">Discard</a>
                <button type="submit" class="inline-flex items-center gap-2 bg-brand text-white px-10 py-3 rounded-xl font-bold hover:bg-blue-700 transition-all shadow-lg shadow-blue-100">
                    <i class="fa-solid fa-floppy-disk"></i>
                    Initialize Rule
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const input = document.getElementById('multiplierInput');
        const preview = document.getElementById('previewPrice');

        input.addEventListener('input', function() {
            const val = parseFloat(this.value) || 1.0;
            const calculated = 100 * val;
            preview.innerText = '$' + calculated.toFixed(2);

            if (val > 1) {
                preview.className = "text-3xl font-black text-red-600 tracking-tighter transition-colors";
            } else if (val < 1) {
                preview.className = "text-3xl font-black text-emerald-600 tracking-tighter transition-colors";
            } else {
                preview.className = "text-3xl font-black text-brand tracking-tighter transition-colors";
            }
        });
    </script>
}