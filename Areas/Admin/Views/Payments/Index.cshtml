@model IEnumerable<ApexDrive.Models.Payment>
@{
    ViewData["Title"] = "Payments Management";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto pb-20">
    <div class="mb-8 flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <div class="flex items-center gap-3 mb-1">
                <div class="bg-brand/10 p-2 rounded-lg text-brand">
                    <i class="fa-solid fa-credit-card text-xl"></i>
                </div>
                <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">Payments Management</h1>
            </div>
            <p class="text-gray-500 text-sm px-1">Track transaction history, verify payments, and manage billing statuses.</p>
        </div>
    </div>

    <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 mb-8">
        <form method="get" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4 items-end">
            <div class="lg:col-span-1">
                <label class="text-[10px] font-black uppercase tracking-widest text-gray-400 mb-2 block ml-1">Search Registry</label>
                <div class="relative group">
                    <i class="fa-solid fa-magnifying-glass absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-brand transition-colors"></i>
                    <input type="text" name="search" value="@ViewBag.Search" placeholder="Booking ID or Email"
                           class="block w-full pl-11 pr-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-brand/20 focus:border-brand transition-all outline-none" />
                </div>
            </div>

            <div>
                <label class="text-[10px] font-black uppercase tracking-widest text-gray-400 mb-2 block ml-1">Payment Status</label>
                <div class="relative">
                    <select name="status" class="block w-full pl-4 pr-10 py-2.5 bg-gray-50 border border-gray-200 rounded-xl text-sm appearance-none focus:ring-2 focus:ring-brand/20 outline-none cursor-pointer">
                        <option value="All">All Transactions</option>
                        <option value="Pending" selected="@(ViewBag.Status == "Pending")">Pending</option>
                        <option value="Paid" selected="@(ViewBag.Status == "Paid")">Paid</option>
                    </select>
                    <i class="fa-solid fa-chevron-down absolute right-4 top-1/2 -translate-y-1/2 text-xs text-gray-400 pointer-events-none"></i>
                </div>
            </div>

            <div>
                <label class="text-[10px] font-black uppercase tracking-widest text-gray-400 mb-2 block ml-1">Date From</label>
                <input type="date" name="fromDate" value="@ViewBag.FromDate"
                       class="block w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-brand/20 outline-none" />
            </div>

            <div>
                <label class="text-[10px] font-black uppercase tracking-widest text-gray-400 mb-2 block ml-1">Date To</label>
                <input type="date" name="toDate" value="@ViewBag.ToDate"
                       class="block w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-brand/20 outline-none" />
            </div>

            <div class="flex gap-2">
                <button type="submit" class="flex-1 px-6 py-2.5 bg-gray-900 text-white rounded-xl text-sm font-bold hover:bg-gray-800 transition-all shadow-sm">
                    Filter
                </button>
                <a asp-action="Index" class="px-4 py-2.5 bg-gray-100 text-gray-600 rounded-xl text-sm font-bold hover:bg-gray-200 transition-all">
                    <i class="fa-solid fa-rotate-left"></i>
                </a>
            </div>
        </form>
    </div>

    <div class="bg-white rounded-3xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-100">
                <thead class="bg-gray-50/50">
                    <tr>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Booking Ref</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Customer</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Method</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Status</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Amount</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Date</th>
                        <th class="py-4 px-6 text-right text-[11px] uppercase tracking-widest font-black text-gray-400">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-50">
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-20">
                                <i class="fa-solid fa-receipt text-4xl text-gray-200 mb-3 block"></i>
                                <p class="text-gray-500 font-medium">No payment records match your criteria.</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            var badge = item.Status == "Paid"
                            ? "bg-emerald-50 text-emerald-700 border-emerald-100"
                            : "bg-amber-50 text-amber-700 border-amber-100";

                            <tr class="group hover:bg-blue-50/30 transition-colors">
                                <td class="py-4 px-6 font-black text-brand">#@item.Booking?.BookingId</td>
                                <td class="py-4 px-6 text-sm text-gray-600">@item.Booking?.Customer?.Email</td>
                                <td class="py-4 px-6">
                                    <span class="text-xs font-bold text-gray-500 bg-gray-100 px-2 py-1 rounded-lg uppercase tracking-tighter">@item.Method</span>
                                </td>
                                <td class="py-4 px-6">
                                    <span class="px-3 py-1 rounded-full text-[10px] font-black uppercase border @badge">@item.Status</span>
                                </td>
                                <td class="py-4 px-6">
                                    <span class="text-sm font-black text-gray-900">@item.Amount.ToString("C")</span>
                                </td>
                                <td class="py-4 px-6 text-xs text-gray-500 font-medium">@item.CreatedAt.ToString("dd MMM yyyy")</td>
                                <td class="py-4 px-6 text-right">
                                    <a asp-action="Edit" asp-route-id="@item.PaymentId"
                                       class="h-8 w-8 inline-flex items-center justify-center rounded-lg bg-gray-100 text-gray-500 hover:bg-brand hover:text-white transition-all shadow-sm">
                                        <i class="fa-solid fa-pen-to-square text-xs"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>