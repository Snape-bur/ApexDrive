@model ApexDrive.Models.Payment
@{
    ViewData["Title"] = "Edit Payment";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-2xl mx-auto pb-10">
    <a asp-action="Index" class="inline-flex items-center gap-2 text-sm font-semibold text-gray-500 hover:text-brand transition-colors mb-6 group">
        <i class="fa-solid fa-arrow-left group-hover:-translate-x-1 transition-transform"></i>
        Back to Transactions
    </a>

    <div class="bg-white rounded-3xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="bg-gray-50/50 px-8 py-6 border-b border-gray-100">
            <div class="flex items-center gap-4">
                <div class="bg-brand p-3 rounded-2xl shadow-lg shadow-blue-100">
                    <i class="fa-solid fa-file-invoice-dollar text-white text-xl"></i>
                </div>
                <div>
                    <h1 class="text-2xl font-black text-gray-900 tracking-tight">Edit Payment Log</h1>
                    <p class="text-sm text-gray-500 font-medium">Update status and transaction details for Booking #@Model.BookingId.</p>
                </div>
            </div>
        </div>

        <form asp-action="Edit" method="post" class="p-8 space-y-6">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="PaymentId" />

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-2">
                    <label class="text-xs font-black uppercase tracking-widest text-gray-400 ml-1">Booking Reference</label>
                    <div class="relative">
                        <i class="fa-solid fa-hashtag absolute left-4 top-1/2 -translate-y-1/2 text-gray-300"></i>
                        <input type="text" value="#@Model.BookingId" readonly
                               class="block w-full pl-11 pr-4 py-3 bg-gray-100 border border-gray-100 rounded-xl text-sm text-gray-500 font-bold outline-none" />
                    </div>
                </div>

                <div class="space-y-2">
                    <label class="text-xs font-black uppercase tracking-widest text-gray-400 ml-1">Total Amount</label>
                    <div class="relative">
                        <i class="fa-solid fa-dollar-sign absolute left-4 top-1/2 -translate-y-1/2 text-gray-300"></i>
                        <input type="text" value="@Model.Amount.ToString("C")" readonly
                               class="block w-full pl-11 pr-4 py-3 bg-gray-100 border border-gray-100 rounded-xl text-sm text-gray-900 font-black outline-none" />
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-2">
                    <label asp-for="Method" class="text-xs font-black uppercase tracking-widest text-gray-400 ml-1">Payment Method</label>
                    <div class="relative group">
                        <i class="fa-solid fa-wallet absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-brand transition-colors"></i>
                        <select asp-for="Method" class="block w-full pl-11 pr-10 py-3 bg-gray-50 border border-gray-200 rounded-xl text-sm appearance-none focus:ring-2 focus:ring-brand/20 outline-none cursor-pointer">
                            <option>Cash</option>
                            <option>Card</option>
                            <option>Bank Transfer</option>
                            <option>QR Payment</option>
                        </select>
                        <i class="fa-solid fa-chevron-down absolute right-4 top-1/2 -translate-y-1/2 text-xs text-gray-400 pointer-events-none"></i>
                    </div>
                </div>

                <div class="space-y-2">
                    <label asp-for="Status" class="text-xs font-black uppercase tracking-widest text-gray-400 ml-1">Fulfillment Status</label>
                    <div class="relative group">
                        <i class="fa-solid fa-circle-question absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-brand transition-colors"></i>
                        <select asp-for="Status" class="block w-full pl-11 pr-10 py-3 bg-gray-50 border border-gray-200 rounded-xl text-sm appearance-none focus:ring-2 focus:ring-brand/20 outline-none cursor-pointer">
                            <option>Pending</option>
                            <option>Paid</option>
                        </select>
                        <i class="fa-solid fa-chevron-down absolute right-4 top-1/2 -translate-y-1/2 text-xs text-gray-400 pointer-events-none"></i>
                    </div>
                </div>
            </div>

            <div class="space-y-2">
                <label asp-for="TransactionRef" class="text-xs font-black uppercase tracking-widest text-gray-400 ml-1">Transaction Reference / Receipt #</label>
                <div class="relative group">
                    <i class="fa-solid fa-receipt absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-brand transition-colors"></i>
                    <input asp-for="TransactionRef" class="block w-full pl-11 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-brand/20 focus:border-brand transition-all outline-none" placeholder="e.g. TRN-9948210" />
                </div>
            </div>

            <div class="mt-10 pt-8 border-t border-gray-100 flex items-center justify-end gap-3">
                <a asp-action="Index" class="px-6 py-2.5 rounded-xl text-sm font-bold text-gray-500 hover:bg-gray-100 transition-all">Discard Changes</a>
                <button type="submit" class="inline-flex items-center gap-2 bg-brand text-white px-10 py-2.5 rounded-xl font-bold hover:bg-blue-700 transition-all shadow-lg shadow-blue-100">
                    <i class="fa-solid fa-floppy-disk"></i>
                    Save Record
                </button>
            </div>
        </form>
    </div>
</div>