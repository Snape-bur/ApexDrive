@model ApexDrive.Models.Car
@{
    ViewData["Title"] = "Delete Car";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto pb-20">
    <a asp-action="Index" class="inline-flex items-center gap-2 text-sm font-semibold text-gray-500 hover:text-brand transition-colors mb-6 group">
        <i class="fa-solid fa-arrow-left group-hover:-translate-x-1 transition-transform"></i>
        Back to Fleet List
    </a>

    <div class="bg-white rounded-3xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="bg-red-50/50 px-8 py-6 border-b border-red-100">
            <div class="flex items-center gap-4">
                <div class="bg-red-600 p-3 rounded-2xl shadow-lg shadow-red-100">
                    <i class="fa-solid fa-car-burst text-white text-xl"></i>
                </div>
                <div>
                    <h1 class="text-2xl font-black text-gray-900 tracking-tight">Decommission Vehicle</h1>
                    <p class="text-sm text-red-600 font-medium">Warning: This action will permanently remove this car from the system.</p>
                </div>
            </div>
        </div>

        <div class="p-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
                <div class="space-y-4">
                    <div class="h-48 w-full rounded-2xl bg-gray-50 border border-gray-100 overflow-hidden shadow-inner">
                        <img src="@Model.ImageUrl" alt="@Model.Model" class="w-full h-full object-cover" onerror="this.src='/images/no-car.png'" />
                    </div>
                    <div class="flex items-center gap-3 px-2">
                        <div class="bg-brand/10 text-brand px-3 py-1 rounded-full text-xs font-black uppercase tracking-widest">
                            @Model.PlateNumber
                        </div>
                        <span class="text-gray-400 text-xs">•</span>
                        <span class="text-gray-500 text-xs font-bold uppercase tracking-widest">@Model.Branch?.BranchName</span>
                    </div>
                </div>

                <div class="bg-gray-50/50 rounded-2xl p-6 border border-gray-100 space-y-4">
                    <h3 class="text-xs font-black uppercase tracking-widest text-gray-400 mb-2">Vehicle Specifications</h3>
                    <div class="grid grid-cols-2 gap-y-4">
                        <div>
                            <p class="text-[10px] text-gray-400 uppercase font-bold">Brand</p>
                            <p class="text-sm font-bold text-gray-900">@Model.Brand</p>
                        </div>
                        <div>
                            <p class="text-[10px] text-gray-400 uppercase font-bold">Model</p>
                            <p class="text-sm font-bold text-gray-900">@Model.Model</p>
                        </div>
                        <div>
                            <p class="text-[10px] text-gray-400 uppercase font-bold">Daily Rate</p>
                            <p class="text-sm font-black text-gray-900">@Model.DailyRate.ToString("C")</p>
                        </div>
                        <div>
                            <p class="text-[10px] text-gray-400 uppercase font-bold">Mileage</p>
                            <p class="text-sm font-bold text-gray-900">@Model.Mileage km</p>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="DeleteConfirmed" method="post" class="flex items-center justify-end gap-3 pt-6 border-t border-gray-100">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="CarId" />

                <a asp-action="Index" class="px-6 py-2.5 rounded-xl text-sm font-bold text-gray-500 hover:bg-gray-100 transition-all">
                    Keep Vehicle
                </a>
                <button type="submit" class="inline-flex items-center gap-2 bg-red-600 text-white px-8 py-2.5 rounded-xl font-bold hover:bg-red-700 transition-all shadow-lg shadow-red-100">
                    <i class="fa-solid fa-trash-can"></i>
                    Confirm Delete
                </button>
            </form>
        </div>
    </div>
</div>