@model ApexDrive.Models.Car
@{
    ViewData["Title"] = "Edit Car";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-2xl font-bold text-brand mb-6">✏️ Edit Car</h1>

<form asp-action="Edit" method="post" class="space-y-6 bg-white p-6 rounded-xl shadow-sm max-w-3xl">
    <input type="hidden" asp-for="CarId" />
    <div asp-validation-summary="ModelOnly" class="bg-red-50 text-red-700 border border-red-200 rounded-lg p-3 text-sm mb-4"></div>

    <div>
        <label asp-for="PlateNumber" class="block font-medium text-gray-700">Plate Number</label>
        <input asp-for="PlateNumber" class="form-input w-full border-gray-300 focus:ring-brand focus:border-brand rounded-lg px-3 py-2" />
        <span asp-validation-for="PlateNumber" class="text-red-500 text-sm"></span>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            <label asp-for="Brand" class="block font-medium text-gray-700">Brand</label>
            <input asp-for="Brand" class="form-input w-full border-gray-300 focus:ring-brand focus:border-brand rounded-lg px-3 py-2" />
            <span asp-validation-for="Brand" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Model" class="block font-medium text-gray-700">Model</label>
            <input asp-for="Model" class="form-input w-full border-gray-300 focus:ring-brand focus:border-brand rounded-lg px-3 py-2" />
            <span asp-validation-for="Model" class="text-red-500 text-sm"></span>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            <label asp-for="DailyRate" class="block font-medium text-gray-700">Daily Rate</label>
            <input asp-for="DailyRate" class="form-input w-full border-gray-300 focus:ring-brand focus:border-brand rounded-lg px-3 py-2" />
            <span asp-validation-for="DailyRate" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Mileage" class="block font-medium text-gray-700">Mileage (km)</label>
            <input asp-for="Mileage" class="form-input w-full border-gray-300 focus:ring-brand focus:border-brand rounded-lg px-3 py-2" />
            <span asp-validation-for="Mileage" class="text-red-500 text-sm"></span>
        </div>
    </div>

    @if (User.IsInRole("SuperAdmin"))
    {
        <div>
            <label class="block font-medium text-gray-700">Branch</label>
            <select asp-for="BranchId"
                    class="form-select w-full border-gray-300 focus:ring-brand focus:border-brand rounded-lg px-3 py-2"
                    asp-items="@(new SelectList(ViewBag.Branches, "BranchId", "BranchName", Model.BranchId))">
                <option value="">-- Select Branch --</option>
            </select>
            <span asp-validation-for="BranchId" class="text-red-500 text-sm"></span>
        </div>
    }
    else
    {
        <input type="hidden" asp-for="BranchId" />
    }

    <div class="flex justify-end space-x-3">
        <a asp-action="Index" class="px-4 py-2 bg-gray-200 hover:bg-gray-300 rounded-lg text-gray-700 font-medium">Cancel</a>
        <button type="submit" class="px-4 py-2 bg-brand hover:bg-blue-700 text-white rounded-lg font-medium">Update</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
