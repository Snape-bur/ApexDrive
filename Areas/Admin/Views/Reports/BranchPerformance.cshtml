@model ApexDrive.Areas.Admin.ViewModels.Reports.BranchPerformanceReportVM
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Branch Performance";
}

<div class="max-w-7xl mx-auto pb-20">
    <div class="mb-8">
        <div class="flex items-center gap-3 mb-1">
            <div class="bg-indigo-600 p-2 rounded-lg text-white shadow-lg shadow-indigo-100">
                <i class="fa-solid fa-chart-line text-xl"></i>
            </div>
            <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">Branch Performance</h1>
        </div>
        <p class="text-gray-500 text-sm px-1">Comparative operational and financial KPIs by location.</p>
    </div>

    <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 mb-8">
        <form method="get" class="flex flex-wrap items-end gap-4">
            <div class="flex-1 min-w-[200px]">
                <label class="text-[10px] font-black uppercase tracking-widest text-gray-400 mb-2 block ml-1">From Date</label>
                <input type="date" name="fromDate" value="@Model.FromDate.ToString("yyyy-MM-dd")" class="block w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-brand/20 outline-none" />
            </div>
            <div class="flex-1 min-w-[200px]">
                <label class="text-[10px] font-black uppercase tracking-widest text-gray-400 mb-2 block ml-1">To Date</label>
                <input type="date" name="toDate" value="@Model.ToDate.ToString("yyyy-MM-dd")" class="block w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-brand/20 outline-none" />
            </div>
            <button type="submit" class="px-10 py-2.5 bg-brand text-white rounded-xl text-sm font-bold hover:bg-blue-700 transition-all shadow-lg shadow-blue-100">
                Update Performance View
            </button>
        </form>
    </div>

    <div class="bg-white rounded-3xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-100">
                <thead class="bg-gray-50/50">
                    <tr>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Branch Name</th>
                        <th class="py-4 px-6 text-right text-[11px] uppercase tracking-widest font-black text-gray-400">Inventory (Cars)</th>
                        <th class="py-4 px-6 text-right text-[11px] uppercase tracking-widest font-black text-gray-400">Bookings Count</th>
                        <th class="py-4 px-6 text-right text-[11px] uppercase tracking-widest font-black text-gray-400">Gross Revenue</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-50">
                    @foreach (var b in Model.Branches.OrderByDescending(x => x.TotalRevenue))
                    {
                        <tr class="group hover:bg-indigo-50/30 transition-colors">
                            <td class="py-4 px-6">
                                <div class="flex items-center gap-3">
                                    <div class="h-8 w-8 rounded-lg bg-indigo-50 flex items-center justify-center text-indigo-600 group-hover:bg-indigo-600 group-hover:text-white transition-all">
                                        <i class="fa-solid fa-city text-[10px]"></i>
                                    </div>
                                    <span class="font-bold text-gray-900">@b.BranchName</span>
                                </div>
                            </td>
                            <td class="py-4 px-6 text-right">
                                <span class="text-sm font-bold text-gray-600">@b.TotalCars</span>
                            </td>
                            <td class="py-4 px-6 text-right">
                                <span class="px-3 py-1 rounded-full bg-gray-100 text-gray-700 text-[10px] font-black uppercase">@b.TotalBookings</span>
                            </td>
                            <td class="py-4 px-6 text-right">
                                <span class="text-base font-black text-gray-900">@b.TotalRevenue.ToString("C")</span>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot class="bg-gray-900 text-white">
                    <tr>
                        <td class="py-5 px-6 font-black uppercase tracking-widest text-xs">Network Total</td>
                        <td class="py-5 px-6 text-right font-bold opacity-60">@Model.Branches.Sum(x => x.TotalCars)</td>
                        <td class="py-5 px-6 text-right font-bold opacity-60">@Model.Branches.Sum(x => x.TotalBookings)</td>
                        <td class="py-5 px-6 text-right">
                            <span class="text-xl font-black text-brand-light">
                                @Model.Branches.Sum(x => x.TotalRevenue).ToString("C")
                            </span>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>