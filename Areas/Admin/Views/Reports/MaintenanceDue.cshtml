@model ApexDrive.Areas.Admin.ViewModels.Reports.MaintenanceDueReportVM

@{
    ViewData["Title"] = "Maintenance Due Report";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto pb-20">
    <div class="mb-8 flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <div class="flex items-center gap-3 mb-1">
                <div class="bg-red-600 p-2 rounded-lg text-white shadow-lg shadow-red-100">
                    <i class="fa-solid fa-screwdriver-wrench text-xl"></i>
                </div>
                <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">Maintenance Due</h1>
            </div>
            <p class="text-gray-500 text-sm px-1">Identify vehicles requiring immediate service or document renewal.</p>
        </div>

        <div class="flex items-center gap-2">
            <a asp-area="Admin" asp-controller="Reports" asp-action="ExportMaintenanceDueExcel"
               class="inline-flex items-center gap-2 bg-emerald-600 text-white px-4 py-2.5 rounded-xl font-bold hover:bg-emerald-700 transition-all shadow-lg shadow-emerald-100 text-sm">
                <i class="fa-solid fa-file-excel"></i> Excel
            </a>
            <a asp-area="Admin" asp-controller="Reports" asp-action="ExportMaintenanceDuePdf"
               class="inline-flex items-center gap-2 bg-red-600 text-white px-4 py-2.5 rounded-xl font-bold hover:bg-red-700 transition-all shadow-lg shadow-red-100 text-sm">
                <i class="fa-solid fa-file-pdf"></i> PDF
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <div class="bg-white p-6 rounded-3xl border border-gray-100 shadow-sm flex items-center gap-5">
            <div class="bg-brand/10 w-14 h-14 rounded-2xl flex items-center justify-center text-brand">
                <i class="fa-solid fa-clipboard-list text-2xl"></i>
            </div>
            <div>
                <p class="text-[10px] font-black uppercase tracking-widest text-gray-400">Total Tasks Due</p>
                <p class="text-2xl font-black text-gray-900">@Model.TotalDue</p>
            </div>
        </div>
        <div class="bg-red-50 p-6 rounded-3xl border border-red-100 shadow-sm flex items-center gap-5">
            <div class="bg-red-600 w-14 h-14 rounded-2xl flex items-center justify-center text-white shadow-lg shadow-red-200">
                <i class="fa-solid fa-triangle-exclamation text-2xl"></i>
            </div>
            <div>
                <p class="text-[10px] font-black uppercase tracking-widest text-red-400">Critical Overdue</p>
                <p class="text-2xl font-black text-red-600">@Model.OverdueCount</p>
            </div>
        </div>
    </div>

    <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 mb-8">
        <form method="get" class="flex flex-wrap items-end gap-4">
            <div class="flex-1 min-w-[200px]">
                <label class="text-[10px] font-black uppercase tracking-widest text-gray-400 mb-2 block ml-1">From Date</label>
                <input type="date" name="fromDate" value="@Model.FromDate.ToString("yyyy-MM-dd")" class="block w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-brand/20 outline-none" />
            </div>
            <div class="flex-1 min-w-[200px]">
                <label class="text-[10px] font-black uppercase tracking-widest text-gray-400 mb-2 block ml-1">To Date</label>
                <input type="date" name="toDate" value="@Model.ToDate.ToString("yyyy-MM-dd")" class="block w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-brand/20 outline-none" />
            </div>
            <button type="submit" class="px-8 py-2.5 bg-gray-900 text-white rounded-xl text-sm font-bold hover:bg-gray-800 transition-all shadow-sm">
                Apply Range
            </button>
        </form>
    </div>

    <div class="bg-white rounded-3xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-100">
                <thead class="bg-gray-50/50">
                    <tr>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Vehicle</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Station</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Task Type</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Deadline</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Status</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-50 text-sm">
                    @foreach (var item in Model.Items)
                    {
                        <tr class="hover:bg-red-50/30 transition-colors">
                            <td class="py-4 px-6">
                                <span class="px-2 py-1 rounded bg-gray-100 text-gray-900 font-black text-xs tracking-tighter uppercase">@item.CarPlate</span>
                            </td>
                            <td class="py-4 px-6 font-medium text-gray-600">@item.BranchName</td>
                            <td class="py-4 px-6">
                                <span class="font-bold text-gray-700">@item.MaintenanceType</span>
                            </td>
                            <td class="py-4 px-6 font-semibold text-gray-900">
                                @item.DueDate.ToString("dd MMM yyyy")
                            </td>
                            <td class="py-4 px-6">
                                @if (item.IsOverdue)
                                {
                                    <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-red-100 text-red-700 text-[10px] font-black uppercase border border-red-200 animate-pulse">
                                        <i class="fa-solid fa-clock-rotate-left"></i> Overdue
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-amber-100 text-amber-700 text-[10px] font-black uppercase border border-amber-200">
                                        <i class="fa-solid fa-hourglass-start"></i> Upcoming
                                    </span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>