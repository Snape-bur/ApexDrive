@model ApexDrive.Areas.Admin.ViewModels.Reports.VehicleUtilizationReportVM

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Vehicle Utilization Report";
}

<div class="max-w-7xl mx-auto pb-20">
    <div class="mb-10 flex flex-col md:flex-row md:items-end justify-between gap-6">
        <div>
            <div class="flex items-center gap-3 mb-1">
                <div class="bg-brand/10 p-2 rounded-lg text-brand">
                    <i class="fa-solid fa-chart-simple text-xl"></i>
                </div>
                <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">Vehicle Utilization</h1>
            </div>
            <p class="text-gray-500 text-sm px-1">Analyze fleet efficiency and identification of high-performing assets.</p>
        </div>

        <form method="get" class="flex flex-wrap gap-3 bg-white p-2 rounded-2xl border border-gray-100 shadow-sm">
            <input type="date" name="fromDate" value="@Model.FromDate.ToString("yyyy-MM-dd")"
                   class="border-0 bg-gray-50 rounded-xl px-4 py-2 text-xs font-bold focus:ring-2 focus:ring-brand/20 outline-none" />
            <input type="date" name="toDate" value="@Model.ToDate.ToString("yyyy-MM-dd")"
                   class="border-0 bg-gray-50 rounded-xl px-4 py-2 text-xs font-bold focus:ring-2 focus:ring-brand/20 outline-none" />

            <button class="bg-gray-900 text-white px-6 py-2 rounded-xl text-xs font-black uppercase tracking-widest hover:bg-gray-800 transition-all">
                Apply
            </button>
            <a asp-action="VehicleUtilization" class="px-3 py-2 text-gray-400 hover:text-brand transition-colors">
                <i class="fa-solid fa-rotate-left"></i>
            </a>
        </form>
    </div>

    <div class="bg-white rounded-3xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-100">
                <thead class="bg-gray-50/50">
                    <tr>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Vehicle</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Location</th>
                        <th class="py-4 px-6 text-center text-[11px] uppercase tracking-widest font-black text-gray-400">Bookings</th>
                        <th class="py-4 px-6 text-center text-[11px] uppercase tracking-widest font-black text-gray-400">Rented Days</th>
                        <th class="py-4 px-6 text-right text-[11px] uppercase tracking-widest font-black text-gray-400">Utilization Rate</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-50">
                    @foreach (var item in Model.Vehicles.OrderByDescending(x => x.UtilizationRate))
                    {
                        <tr class="group hover:bg-blue-50/30 transition-colors">
                            <td class="py-4 px-6">
                                <div class="flex items-center gap-3">
                                    <div class="h-10 w-10 rounded-xl bg-gray-100 flex items-center justify-center text-gray-400 group-hover:bg-brand group-hover:text-white transition-all shadow-sm">
                                        <i class="fa-solid fa-car"></i>
                                    </div>
                                    <span class="font-bold text-gray-900 tracking-tight">@item.PlateNumber</span>
                                </div>
                            </td>
                            <td class="py-4 px-6">
                                <span class="text-sm font-medium text-gray-600">@item.BranchName</span>
                            </td>
                            <td class="py-4 px-6 text-center">
                                <span class="text-sm font-bold text-gray-900">@item.TotalBookings</span>
                            </td>
                            <td class="py-4 px-6 text-center">
                                <span class="text-sm font-bold text-gray-900">@item.TotalRentedDays</span>
                            </td>
                            <td class="py-4 px-6 text-right">
                                @{
                                    var colorClass = item.UtilizationRate >= 70 ? "bg-emerald-50 text-emerald-700 border-emerald-100" :
                                    item.UtilizationRate >= 40 ? "bg-amber-50 text-amber-700 border-amber-100" :
                                    "bg-red-50 text-red-700 border-red-100";
                                }
                                <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full border @colorClass">
                                    <div class="w-1.5 h-1.5 rounded-full bg-current"></div>
                                    <span class="text-xs font-black tracking-tighter">@item.UtilizationRate.ToString("0.0")%</span>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Vehicles.Any())
        {
            <div class="text-center py-20 text-gray-400 font-medium">
                <i class="fa-solid fa-database text-4xl block mb-3 opacity-20"></i>
                No utilization data available for selected period.
            </div>
        }
    </div>
</div>