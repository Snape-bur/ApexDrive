@model IEnumerable<ApexDrive.Models.Booking>

@{
    ViewData["Title"] = "Booking Report";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto pb-20">
    <div class="mb-8 flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <div class="flex items-center gap-3 mb-1">
                <div class="bg-brand/10 p-2 rounded-lg text-brand">
                    <i class="fa-solid fa-file-contract text-xl"></i>
                </div>
                <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">Booking Report</h1>
            </div>
            <p class="text-gray-500 text-sm px-1">Extract and audit comprehensive reservation data.</p>
        </div>

        <div class="flex items-center gap-2">
            <a asp-action="ExportBookingsExcel" class="inline-flex items-center gap-2 bg-emerald-600 text-white px-4 py-2.5 rounded-xl font-bold hover:bg-emerald-700 transition-all shadow-lg shadow-emerald-100 text-sm">
                <i class="fa-solid fa-file-excel"></i>
                Excel
            </a>
            <a asp-action="ExportBookingsPdf" class="inline-flex items-center gap-2 bg-red-600 text-white px-4 py-2.5 rounded-xl font-bold hover:bg-red-700 transition-all shadow-lg shadow-red-100 text-sm">
                <i class="fa-solid fa-file-pdf"></i>
                PDF
            </a>
        </div>
    </div>

    <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 mb-8">
        <form method="get" class="flex flex-wrap items-end gap-4">
            <div class="flex-1 min-w-[200px]">
                <label class="text-[10px] font-black uppercase tracking-widest text-gray-400 mb-2 block ml-1">Start Date</label>
                <input type="date" name="startDate" value="@ViewBag.StartDate" class="block w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-brand/20 outline-none" />
            </div>
            <div class="flex-1 min-w-[200px]">
                <label class="text-[10px] font-black uppercase tracking-widest text-gray-400 mb-2 block ml-1">End Date</label>
                <input type="date" name="endDate" value="@ViewBag.EndDate" class="block w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-brand/20 outline-none" />
            </div>
            <button type="submit" class="px-8 py-2.5 bg-gray-900 text-white rounded-xl text-sm font-bold hover:bg-gray-800 transition-all shadow-sm">
                <i class="fa-solid fa-filter mr-2"></i> Filter
            </button>
        </form>
    </div>

    <div class="bg-white rounded-3xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-100">
                <thead class="bg-gray-50/50">
                    <tr>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">ID</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Customer</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Vehicle</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Branch</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Timeline</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Status</th>
                        <th class="py-4 px-6 text-right text-[11px] uppercase tracking-widest font-black text-gray-400">Total</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-50 text-sm">
                    @foreach (var b in Model)
                    {
                        <tr class="hover:bg-blue-50/30 transition-colors">
                            <td class="py-4 px-6 font-bold text-brand">#@b.BookingId</td>
                            <td class="py-4 px-6 font-medium text-gray-700">@b.Customer?.FullName</td>
                            <td class="py-4 px-6 text-xs font-bold text-gray-500 uppercase">@b.Car?.PlateNumber</td>
                            <td class="py-4 px-6 text-gray-600">@b.PickupBranch?.BranchName</td>
                            <td class="py-4 px-6 text-xs text-gray-500 whitespace-nowrap">
                                @b.StartDate.ToString("dd MMM") - @b.EndDate.ToString("dd MMM yy")
                            </td>
                            <td class="py-4 px-6">
                                <span class="px-2 py-1 rounded-lg text-[10px] font-black uppercase border border-gray-100 bg-gray-50">@b.Status</span>
                            </td>
                            <td class="py-4 px-6 text-right font-black text-gray-900">@b.TotalCost.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>