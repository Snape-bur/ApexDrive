@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Reports Center";
}

<div class="max-w-7xl mx-auto pb-20">
    <div class="mb-10">
        <div class="flex items-center gap-3 mb-1">
            <div class="bg-brand/10 p-2 rounded-lg text-brand">
                <i class="fa-solid fa-chart-column text-xl"></i>
            </div>
            <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">Reports Center</h1>
        </div>
        <p class="text-gray-500 text-sm px-1">Generate deep-dive analytics and export operational data.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

        <a asp-action="Revenue" class="group relative bg-white p-8 rounded-3xl border border-gray-100 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            <div class="flex flex-col h-full">
                <div class="bg-emerald-50 text-emerald-600 w-12 h-12 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-emerald-600 group-hover:text-white transition-colors">
                    <i class="fa-solid fa-hand-holding-dollar text-xl"></i>
                </div>
                <h2 class="font-black text-gray-900 text-lg mb-2">Revenue Report</h2>
                <p class="text-sm text-gray-500 leading-relaxed">Analyze earnings and growth trends across custom date ranges.</p>
                <div class="mt-6 flex items-center text-xs font-black text-brand uppercase tracking-widest opacity-0 group-hover:opacity-100 transition-opacity">
                    Generate Report <i class="fa-solid fa-arrow-right ml-2"></i>
                </div>
            </div>
        </a>

        @if (User.IsInRole("SuperAdmin"))
        {
            <a asp-action="RevenueByBranch" class="group relative bg-white p-8 rounded-3xl border border-gray-100 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
                <div class="flex flex-col h-full">
                    <div class="bg-blue-50 text-blue-600 w-12 h-12 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-blue-600 group-hover:text-white transition-colors">
                        <i class="fa-solid fa-city text-xl"></i>
                    </div>
                    <h2 class="font-black text-gray-900 text-lg mb-2">Branch Revenue</h2>
                    <p class="text-sm text-gray-500 leading-relaxed">Comparative financial analysis across all physical branch locations.</p>
                    <div class="mt-6 flex items-center text-xs font-black text-brand uppercase tracking-widest opacity-0 group-hover:opacity-100 transition-opacity">
                        Generate Report <i class="fa-solid fa-arrow-right ml-2"></i>
                    </div>
                </div>
            </a>
        }

        <a asp-action="Bookings" class="group relative bg-white p-8 rounded-3xl border border-gray-100 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            <div class="flex flex-col h-full">
                <div class="bg-indigo-50 text-indigo-600 w-12 h-12 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-indigo-600 group-hover:text-white transition-colors">
                    <i class="fa-solid fa-calendar-check text-xl"></i>
                </div>
                <h2 class="font-black text-gray-900 text-lg mb-2">Booking Registry</h2>
                <p class="text-sm text-gray-500 leading-relaxed">Detailed audit of reservation history, customer data, and cancellations.</p>
                <div class="mt-6 flex items-center text-xs font-black text-brand uppercase tracking-widest opacity-0 group-hover:opacity-100 transition-opacity">
                    Generate Report <i class="fa-solid fa-arrow-right ml-2"></i>
                </div>
            </div>
        </a>

        @if (User.IsInRole("SuperAdmin"))
        {
            <a asp-action="BranchPerformance" class="group relative bg-white p-8 rounded-3xl border border-gray-100 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
                <div class="flex flex-col h-full">
                    <div class="bg-purple-50 text-purple-600 w-12 h-12 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-purple-600 group-hover:text-white transition-colors">
                        <i class="fa-solid fa-chart-line text-xl"></i>
                    </div>
                    <h2 class="font-black text-gray-900 text-lg mb-2">KPI Performance</h2>
                    <p class="text-sm text-gray-500 leading-relaxed">Track branch utilization rates and operational efficiency metrics.</p>
                    <div class="mt-6 flex items-center text-xs font-black text-brand uppercase tracking-widest opacity-0 group-hover:opacity-100 transition-opacity">
                        Generate Report <i class="fa-solid fa-arrow-right ml-2"></i>
                    </div>
                </div>
            </a>
        }

        <a asp-action="VehicleUtilization" class="group relative bg-white p-8 rounded-3xl border border-gray-100 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            <div class="flex flex-col h-full">
                <div class="bg-amber-50 text-amber-600 w-12 h-12 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-amber-600 group-hover:text-white transition-colors">
                    <i class="fa-solid fa-car-side text-xl"></i>
                </div>
                <h2 class="font-black text-gray-900 text-lg mb-2">Fleet Utilization</h2>
                <p class="text-sm text-gray-500 leading-relaxed">Identify your most active vehicles and monitor idle fleet time.</p>
                <div class="mt-6 flex items-center text-xs font-black text-brand uppercase tracking-widest opacity-0 group-hover:opacity-100 transition-opacity">
                    Generate Report <i class="fa-solid fa-arrow-right ml-2"></i>
                </div>
            </div>
        </a>

        <a asp-action="MaintenanceDue" class="group relative bg-white p-8 rounded-3xl border border-gray-100 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            <div class="flex flex-col h-full">
                <div class="bg-red-50 text-red-600 w-12 h-12 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-red-600 group-hover:text-white transition-colors">
                    <i class="fa-solid fa-screwdriver-wrench text-xl"></i>
                </div>
                <h2 class="font-black text-gray-900 text-lg mb-2">Service Alerts</h2>
                <p class="text-sm text-gray-500 leading-relaxed">Critical overview of upcoming maintenance and overdue service tasks.</p>
                <div class="mt-6 flex items-center text-xs font-black text-brand uppercase tracking-widest opacity-0 group-hover:opacity-100 transition-opacity">
                    Generate Report <i class="fa-solid fa-arrow-right ml-2"></i>
                </div>
            </div>
        </a>

    </div>
</div>