@model ApexDrive.Models.CarReminder
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto p-6">
    <!-- Header -->
    <div class="flex items-center justify-between mb-6">
        <h1 class="text-2xl font-bold text-brand flex items-center gap-2">
            <span class="text-3xl">➕</span> New Reminder
        </h1>
        <a asp-action="Index"
           class="text-sm text-gray-500 hover:text-blue-600 transition">
            ← Back to list
        </a>
    </div>

    <!-- Form Card -->
    <form asp-action="Create" method="post"
          class="bg-white rounded-xl shadow-sm ring-1 ring-black/5 p-6 space-y-6">
        @Html.AntiForgeryToken()

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Type -->
            <div>
                <label asp-for="Type" class="block text-sm font-semibold text-gray-700 mb-1">Type</label>
                <select asp-for="Type"
                        class="w-full border border-gray-300 rounded-lg px-3 py-2 text-sm focus:ring-brand focus:border-brand">
                    <option value="">-- Select Type --</option>
                    <option>Service</option>
                    <option>Insurance</option>
                </select>
                <span asp-validation-for="Type" class="text-red-500 text-sm"></span>
            </div>

            <!-- Car -->
            <div>
                <label asp-for="CarId" class="block text-sm font-semibold text-gray-700 mb-1">Car</label>
                <select asp-for="CarId"
                        asp-items="@(new SelectList(ViewBag.Cars, nameof(ApexDrive.Models.Car.CarId), nameof(ApexDrive.Models.Car.PlateNumber)))"
                        class="w-full border border-gray-300 rounded-lg px-3 py-2 text-sm focus:ring-brand focus:border-brand">
                    <option value="">-- Select Car --</option>
                </select>
                <small class="text-gray-500 text-xs">Brand / Model shown on the list page</small>
                <span asp-validation-for="CarId" class="text-red-500 text-sm"></span>
            </div>

            <!-- Reminder Date -->
            <div>
                <label asp-for="ReminderDate" class="block text-sm font-semibold text-gray-700 mb-1">Reminder Date</label>
                <input asp-for="ReminderDate" type="date"
                       class="w-full border border-gray-300 rounded-lg px-3 py-2 text-sm focus:ring-brand focus:border-brand" />
                <span asp-validation-for="ReminderDate" class="text-red-500 text-sm"></span>
            </div>

            <!-- Notes -->
            <div class="md:col-span-2">
                <label asp-for="Notes" class="block text-sm font-semibold text-gray-700 mb-1">Notes</label>
                <textarea asp-for="Notes"
                          class="w-full border border-gray-300 rounded-lg px-3 py-2 text-sm focus:ring-brand focus:border-brand h-28 resize-none"></textarea>
                <span asp-validation-for="Notes" class="text-red-500 text-sm"></span>
            </div>
        </div>

        <!-- Buttons -->
        <div class="flex justify-end gap-3 pt-4 border-t border-gray-100">
            <a asp-action="Index"
               class="px-4 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100 transition">
                Cancel
            </a>
            <button type="submit"
                    class="px-5 py-2 rounded-lg bg-brand text-white font-semibold shadow-sm hover:bg-blue-700 transition">
                Save Reminder
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
