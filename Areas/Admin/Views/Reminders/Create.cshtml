@model ApexDrive.Models.CarReminder

<div class="p-6">
    <h2 class="text-2xl font-bold text-blue-600 flex items-center gap-2 mb-6">
        <span class="text-3xl font-bold">+</span>
        New Reminder
    </h2>

    <form asp-action="Create" method="post" class="space-y-6 bg-white p-6 rounded-2xl shadow-md max-w-2xl">
        @Html.AntiForgeryToken()

        <!-- Type -->
        <div>
            <label asp-for="Type" class="block text-sm font-semibold text-gray-700 mb-1">Type</label>
            <select asp-for="Type" class="form-select w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-blue-500 focus:border-blue-500">
                <option value="">-- Select Type --</option>
                <option>Service</option>
                <option>Insurance</option>
            </select>
            <span asp-validation-for="Type" class="text-red-500 text-sm"></span>
        </div>

        <!-- Car -->
        <div>
            <label asp-for="CarId" class="block text-sm font-semibold text-gray-700 mb-1">Car</label>
            <select asp-for="CarId"
                    asp-items="@(new SelectList(ViewBag.Cars, nameof(ApexDrive.Models.Car.CarId), nameof(ApexDrive.Models.Car.PlateNumber)))"
                    class="form-select w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-blue-500 focus:border-blue-500">
                <option value="">-- Select Car --</option>
            </select>
            <small class="text-gray-500 text-sm">Brand/Model will show on the list page.</small>
            <span asp-validation-for="CarId" class="text-red-500 text-sm"></span>
        </div>

        <!-- Reminder Date -->
        <div>
            <label asp-for="ReminderDate" class="block text-sm font-semibold text-gray-700 mb-1">Reminder Date</label>
            <input asp-for="ReminderDate" type="date" class="form-input w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="ReminderDate" class="text-red-500 text-sm"></span>
        </div>

        <!-- Notes -->
        <div>
            <label asp-for="Notes" class="block text-sm font-semibold text-gray-700 mb-1">Notes</label>
            <textarea asp-for="Notes" class="form-textarea w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-blue-500 focus:border-blue-500 h-28"></textarea>
            <span asp-validation-for="Notes" class="text-red-500 text-sm"></span>
        </div>

        <!-- Buttons -->
        <div class="flex items-center justify-end gap-3 pt-4">
            <a asp-action="Index"
               class="px-4 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100 transition-all">
                Cancel
            </a>
            <button type="submit"
                    class="px-5 py-2 rounded-lg bg-blue-600 text-white font-semibold shadow hover:bg-blue-700 transition-all">
                Save
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
