@model IEnumerable<ApexDrive.Models.CarReminder>
@{
    ViewData["Title"] = "Reminders";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto pb-20">
    <div class="mb-8 flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <div class="flex items-center gap-3 mb-1">
                <div class="bg-brand/10 p-2 rounded-lg">
                    <i class="fa-solid fa-bell text-brand text-xl"></i>
                </div>
                <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">Fleet Reminders</h1>
            </div>
            <p class="text-gray-500 text-sm px-1">Track insurance renewals, scheduled servicing, and vehicle maintenance tasks.</p>
        </div>

        <a asp-action="Create" class="inline-flex items-center gap-2 bg-brand text-white px-5 py-2.5 rounded-xl font-bold hover:bg-blue-700 transition-all shadow-lg shadow-blue-100">
            <i class="fa-solid fa-plus text-xs"></i>
            New Reminder
        </a>
    </div>

    <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 mb-8">
        <form method="get" class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-4">
                <div class="relative group">
                    <i class="fa-solid fa-magnifying-glass absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-brand transition-colors"></i>
                    <input name="search" value="@Context.Request.Query["search"]"
                           class="block w-full pl-11 pr-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-brand/20 focus:border-brand transition-all outline-none"
                           placeholder="Plate / Brand / Model" />
                </div>

                <div class="relative">
                    <select name="type" class="block w-full pl-4 pr-10 py-2.5 bg-gray-50 border border-gray-200 rounded-xl text-sm appearance-none focus:ring-2 focus:ring-brand/20 focus:border-brand transition-all outline-none cursor-pointer">
                        <option value="">All Reminder Types</option>
                        <option value="Insurance" selected="@(Context.Request.Query["type"] == "Insurance")">🛡️ Insurance</option>
                        <option value="Service" selected="@(Context.Request.Query["type"] == "Service")">⚙️ Service</option>
                    </select>
                    <i class="fa-solid fa-chevron-down absolute right-4 top-1/2 -translate-y-1/2 text-xs text-gray-400 pointer-events-none"></i>
                </div>

                <div class="md:col-span-1 lg:col-span-2 flex items-center gap-2">
                    <div class="relative flex-1">
                        <input type="date" name="from" value="@Context.Request.Query["from"]"
                               class="block w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-brand/20 outline-none" />
                    </div>
                    <span class="text-gray-300 font-bold">→</span>
                    <div class="relative flex-1">
                        <input type="date" name="to" value="@Context.Request.Query["to"]"
                               class="block w-full px-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-brand/20 outline-none" />
                    </div>
                </div>
            </div>

            <div class="flex flex-wrap items-center justify-between gap-4 pt-2">
                <div class="flex items-center gap-6">
                    <label class="relative inline-flex items-center cursor-pointer group">
                        <input type="checkbox" name="onlyOverdue" value="true" class="sr-only peer" @(Context.Request.Query["onlyOverdue"] == "true" ? "checked" : null)>
                        <div class="w-9 h-5 bg-gray-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-4 after:w-4 after:transition-all peer-checked:bg-red-500"></div>
                        <span class="ml-3 text-sm font-bold text-gray-600 group-hover:text-red-500 transition-colors uppercase tracking-widest text-[10px]">Only Overdue</span>
                    </label>

                    @if (User.IsInRole("SuperAdmin"))
                    {
                        <div class="relative min-w-[200px]">
                            <select name="branchId" class="block w-full pl-4 pr-10 py-2.5 bg-white border border-gray-200 rounded-xl text-xs font-bold uppercase tracking-tight appearance-none focus:ring-2 focus:ring-brand/20 outline-none cursor-pointer">
                                <option value="">All Branches</option>
                                @foreach (var br in ViewBag.Branches as List<ApexDrive.Models.Branch>)
                                {
                                    <option value="@br.BranchId" selected="@(Context.Request.Query["branchId"] == br.BranchId.ToString())">@br.BranchName</option>
                                }
                            </select>
                            <i class="fa-solid fa-location-dot absolute right-4 top-1/2 -translate-y-1/2 text-xs text-brand pointer-events-none"></i>
                        </div>
                    }
                </div>

                <div class="flex gap-2">
                    <a asp-action="Index" class="px-4 py-2.5 bg-gray-100 text-gray-600 rounded-xl text-sm font-bold hover:bg-gray-200 transition-all">Reset</a>
                    <button type="submit" class="px-8 py-2.5 bg-gray-900 text-white rounded-xl text-sm font-bold hover:bg-gray-800 transition-all shadow-md">Apply Filters</button>
                </div>
            </div>
        </form>
    </div>

    <div class="bg-white rounded-3xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-100">
                <thead class="bg-gray-50/50">
                    <tr>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Due Date</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Type</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Vehicle</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Station</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Status</th>
                        <th class="py-4 px-6 text-right text-[11px] uppercase tracking-widest font-black text-gray-400">Actions</th>
                    </tr>
                </thead>

                <tbody class="divide-y divide-gray-50">
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-20 text-gray-400 font-medium">
                                <i class="fa-solid fa-calendar-check text-4xl block mb-3 opacity-20"></i>
                                All clear! No active reminders found.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var r in Model)
                        {
                            var overdue = !r.IsCompleted && r.ReminderDate.Date < DateTime.UtcNow.Date;
                            <tr class="group hover:bg-blue-50/30 transition-colors">
                                <td class="py-4 px-6">
                                    <div class="flex flex-col">
                                        <span class="text-sm font-bold text-gray-900">@r.ReminderDate.ToString("dd MMM yyyy")</span>
                                        <span class="text-[10px] font-black text-gray-400 uppercase tracking-tighter">@r.ReminderDate.ToString("dddd")</span>
                                    </div>
                                </td>

                                <td class="py-4 px-6">
                                    @{
                                        var typeClass = r.Type == "Insurance" ? "bg-blue-50 text-blue-700 border-blue-100" : "bg-purple-50 text-purple-700 border-purple-100";
                                        var typeIcon = r.Type == "Insurance" ? "fa-shield-halved" : "fa-screwdriver-wrench";
                                    }
                                    <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full border text-[10px] font-black uppercase tracking-widest @typeClass">
                                        <i class="fa-solid @typeIcon"></i> @r.Type
                                    </span>
                                </td>

                                <td class="py-4 px-6">
                                    <div class="flex items-center gap-3">
                                        <div class="h-10 w-10 rounded-xl bg-gray-100 flex items-center justify-center text-gray-500 group-hover:bg-brand group-hover:text-white transition-all shadow-sm">
                                            <i class="fa-solid fa-car"></i>
                                        </div>
                                        <div>
                                            <span class="block font-bold text-gray-900">@r.Car?.PlateNumber</span>
                                            <span class="text-xs text-gray-500">@r.Car?.Brand @r.Car?.Model</span>
                                        </div>
                                    </div>
                                </td>

                                <td class="py-4 px-6">
                                    <span class="text-sm font-medium text-gray-600">@r.Branch?.BranchName</span>
                                </td>

                                <td class="py-4 px-6">
                                    @if (r.IsCompleted)
                                    {
                                        <span class="inline-flex items-center gap-1 px-3 py-1 rounded-lg bg-emerald-50 text-emerald-700 text-xs font-bold border border-emerald-100">
                                            <i class="fa-solid fa-check-double text-[10px]"></i> Done
                                        </span>
                                    }
                                    else if (overdue)
                                    {
                                        <span class="inline-flex items-center gap-1 px-3 py-1 rounded-lg bg-red-50 text-red-700 text-xs font-bold border border-red-100 animate-pulse">
                                            <i class="fa-solid fa-triangle-exclamation text-[10px]"></i> Overdue
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="inline-flex items-center gap-1 px-3 py-1 rounded-lg bg-amber-50 text-amber-700 text-xs font-bold border border-amber-100">
                                            <i class="fa-solid fa-clock text-[10px]"></i> Upcoming
                                        </span>
                                    }
                                </td>

                                <td class="py-4 px-6 text-right">
                                    <div class="flex items-center justify-end gap-2">
                                        <form asp-action="ToggleComplete" method="post" class="inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@r.ReminderId" />
                                            <button type="submit" class="h-8 w-8 flex items-center justify-center rounded-lg border border-gray-200 text-gray-500 hover:bg-emerald-500 hover:text-white transition-all shadow-sm" title="@(r.IsCompleted ? "Reopen" : "Complete")">
                                                <i class="fa-solid @(r.IsCompleted ? "fa-rotate-left" : "fa-check") text-xs"></i>
                                            </button>
                                        </form>

                                        <a asp-action="Edit" asp-route-id="@r.ReminderId"
                                           class="h-8 w-8 flex items-center justify-center rounded-lg bg-gray-100 text-gray-500 hover:bg-brand hover:text-white transition-all shadow-sm" title="Edit">
                                            <i class="fa-solid fa-pen-to-square text-xs"></i>
                                        </a>

                                        <button type="button" onclick="confirmDeleteReminder('@r.ReminderId')"
                                                class="h-8 w-8 flex items-center justify-center rounded-lg bg-red-50 text-red-600 hover:bg-red-600 hover:text-white transition-all shadow-sm" title="Delete">
                                            <i class="fa-solid fa-trash-can text-xs"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<form id="deleteReminderForm" asp-action="Delete" method="post" class="hidden">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="deleteReminderId" />
</form>

<script>
    function confirmDeleteReminder(id) {
        if (confirm("Permanently delete this reminder?")) {
            document.getElementById('deleteReminderId').value = id;
            document.getElementById('deleteReminderForm').submit();
        }
    }
</script>