@model IEnumerable<ApexDrive.Models.CarMaintenanceHistory>
@{
    ViewData["Title"] = "Maintenance History";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto pb-20">
    <div class="mb-8 flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <div class="flex items-center gap-3 mb-1">
                <div class="bg-brand/10 p-2 rounded-lg text-brand">
                    <i class="fa-solid fa-screwdriver-wrench text-xl"></i>
                </div>
                <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">Maintenance History</h1>
            </div>
            <p class="text-gray-500 text-sm px-1">Log and track all vehicle repairs, routine servicing, and inspections.</p>
        </div>

        <a asp-action="Create" class="inline-flex items-center gap-2 bg-brand text-white px-5 py-2.5 rounded-xl font-bold hover:bg-blue-700 transition-all shadow-lg shadow-blue-100">
            <i class="fa-solid fa-plus text-xs"></i>
            Log New Service
        </a>
    </div>

    <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 mb-8">
        <form method="get" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <div class="relative group lg:col-span-1">
                <i class="fa-solid fa-magnifying-glass absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-brand transition-colors"></i>
                <input name="search" value="@Context.Request.Query["search"]"
                       class="block w-full pl-11 pr-4 py-2.5 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-brand/20 focus:border-brand transition-all outline-none"
                       placeholder="Plate / Brand / Notes..." />
            </div>

            <div class="flex items-center gap-2">
                <div class="relative flex-1">
                    <input type="date" name="from" value="@Context.Request.Query["from"]"
                           class="block w-full px-3 py-2.5 bg-gray-50 border border-gray-200 rounded-xl text-xs focus:ring-2 focus:ring-brand/20 outline-none" />
                </div>
                <span class="text-gray-300">
                    <i class="fa-solid fa-arrow-right-long text-xs"></i>
                </span>
                <div class="relative flex-1">
                    <input type="date" name="to" value="@Context.Request.Query["to"]"
                           class="block w-full px-3 py-2.5 bg-gray-50 border border-gray-200 rounded-xl text-xs focus:ring-2 focus:ring-brand/20 outline-none" />
                </div>
            </div>

            <div>
                @if (User.IsInRole("SuperAdmin"))
                {
                    <div class="relative">
                        <select name="branchId" class="block w-full pl-4 pr-10 py-2.5 bg-gray-50 border border-gray-200 rounded-xl text-sm appearance-none focus:ring-2 focus:ring-brand/20 focus:border-brand transition-all outline-none cursor-pointer">
                            <option value="">All Branches</option>
                            @foreach (var br in ViewBag.Branches as List<ApexDrive.Models.Branch>)
                            {
                                <option value="@br.BranchId" selected="@(Context.Request.Query["branchId"] == br.BranchId.ToString())">@br.BranchName</option>
                            }
                        </select>
                        <i class="fa-solid fa-chevron-down absolute right-4 top-1/2 -translate-y-1/2 text-xs text-gray-400 pointer-events-none"></i>
                    </div>
                }
            </div>

            <div class="flex gap-2">
                <button type="submit" class="flex-1 px-4 py-2.5 bg-gray-900 text-white rounded-xl text-sm font-bold hover:bg-gray-800 transition-all shadow-sm">
                    Filter
                </button>
                <a asp-action="Index" class="px-4 py-2.5 bg-gray-100 text-gray-600 rounded-xl text-sm font-bold hover:bg-gray-200 transition-all" title="Reset">
                    <i class="fa-solid fa-rotate-left"></i>
                </a>
            </div>
        </form>
    </div>

    <div class="bg-white rounded-3xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-100">
                <thead class="bg-gray-50/50">
                    <tr>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Service Date</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Vehicle</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Branch</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Service Type</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Mileage</th>
                        <th class="py-4 px-6 text-left text-[11px] uppercase tracking-widest font-black text-gray-400">Notes</th>
                        <th class="py-4 px-6 text-right text-[11px] uppercase tracking-widest font-black text-gray-400">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-50">
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-20 text-gray-400 font-medium">
                                <i class="fa-solid fa-clipboard-check text-4xl block mb-3 opacity-20"></i>
                                No maintenance records found.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var m in Model)
                        {
                            <tr class="group hover:bg-blue-50/30 transition-colors">
                                <td class="py-4 px-6 whitespace-nowrap">
                                    <div class="flex items-center gap-2 font-bold text-gray-900">
                                        <i class="fa-solid fa-calendar-day text-brand text-[10px]"></i>
                                        @m.ServiceDate.ToString("dd MMM yyyy")
                                    </div>
                                </td>

                                <td class="py-4 px-6">
                                    <div class="flex flex-col">
                                        <span class="font-bold text-gray-900">@m.Car?.PlateNumber</span>
                                        <span class="text-[10px] text-gray-400 font-bold uppercase tracking-tight">@m.Car?.Brand @m.Car?.Model</span>
                                    </div>
                                </td>

                                <td class="py-4 px-6 text-sm text-gray-600">@m.Branch?.BranchName</td>

                                <td class="py-4 px-6">
                                    <div class="flex items-center gap-2">
                                        <span class="px-2.5 py-1 rounded-lg bg-blue-50 text-brand text-xs font-bold border border-blue-100">
                                            @m.ServiceType
                                        </span>
                                        @if (m.Notes?.Contains("Auto-added") == true)
                                        {
                                            <span class="inline-flex items-center gap-1 text-[10px] font-black uppercase text-indigo-500" title="System generated record">
                                                <i class="fa-solid fa-robot"></i> Auto
                                            </span>
                                        }
                                    </div>
                                </td>

                                <td class="py-4 px-6">
                                    <div class="text-sm font-bold text-gray-900">
                                        <i class="fa-solid fa-gauge-high text-gray-300 mr-1 text-xs"></i>
                                        @m.Mileage.ToString("N0") <span class="text-[10px] text-gray-400">KM</span>
                                    </div>
                                </td>

                                <td class="py-4 px-6">
                                    <p class="text-xs text-gray-500 max-w-[180px] truncate" title="@m.Notes">@m.Notes</p>
                                </td>

                                <td class="py-4 px-6 text-right">
                                    <div class="flex items-center justify-end gap-2">
                                        <a asp-action="Edit" asp-route-id="@m.HistoryId"
                                           class="h-8 w-8 flex items-center justify-center rounded-lg bg-gray-100 text-gray-500 hover:bg-brand hover:text-white transition-all shadow-sm"
                                           title="Edit Log">
                                            <i class="fa-solid fa-pen-to-square text-xs"></i>
                                        </a>
                                        <button type="button" onclick="confirmDeleteLog('@m.HistoryId')"
                                                class="h-8 w-8 flex items-center justify-center rounded-lg bg-red-50 text-red-600 hover:bg-red-600 hover:text-white transition-all shadow-sm"
                                                title="Delete Log">
                                            <i class="fa-solid fa-trash-can text-xs"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<form id="deleteLogForm" asp-action="Delete" method="post" class="hidden">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="deleteLogId" />
</form>

<script>
    function confirmDeleteLog(id) {
        if (confirm("Permanently delete this maintenance record?")) {
            document.getElementById('deleteLogId').value = id;
            document.getElementById('deleteLogForm').submit();
        }
    }
</script>