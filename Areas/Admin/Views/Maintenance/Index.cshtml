@model IEnumerable<ApexDrive.Models.CarMaintenanceHistory>
@{
    ViewData["Title"] = "Maintenance";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h1 class="text-2xl font-bold text-brand mb-6">🧰 Maintenance History</h1>

<form method="get" class="mb-6 grid gap-3 md:grid-cols-4 bg-white p-4 rounded-xl shadow-sm">
    <input name="search" value="@Context.Request.Query["search"]"
           class="border border-gray-300 rounded-lg px-3 py-2 text-sm focus:ring-brand focus:border-brand"
           placeholder="🔍 Plate / Brand / Model / Notes" />

    <div class="flex gap-2">
        <input type="date" name="from" value="@Context.Request.Query["from"]"
               class="border border-gray-300 rounded-lg px-3 py-2 text-sm w-full focus:ring-brand focus:border-brand" />
        <input type="date" name="to" value="@Context.Request.Query["to"]"
               class="border border-gray-300 rounded-lg px-3 py-2 text-sm w-full focus:ring-brand focus:border-brand" />
    </div>

    @if (User.IsInRole("SuperAdmin"))
    {
        <select name="branchId" class="border border-gray-300 rounded-lg px-3 py-2 text-sm focus:ring-brand focus:border-brand">
            <option value="">All Branches</option>
            @foreach (var br in ViewBag.Branches as List<ApexDrive.Models.Branch>)
            {
                <option value="@br.BranchId" selected="@(Context.Request.Query["branchId"] == br.BranchId.ToString())">@br.BranchName</option>
            }
        </select>
    }

    <div class="flex items-center gap-2">
        <button class="px-3 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg text-sm">Filter</button>
        <a asp-action="Create" class="ml-auto md:ml-0 px-4 py-2 bg-brand text-white rounded-lg text-sm hover:bg-blue-700">➕ New</a>
    </div>
</form>

<table class="min-w-full bg-white rounded-lg shadow-sm">
    <thead class="bg-gray-100 text-gray-700 text-sm uppercase">
        <tr>
            <th class="py-3 px-4 text-left">Date</th>
            <th class="py-3 px-4 text-left">Car</th>
            <th class="py-3 px-4 text-left">Branch</th>
            <th class="py-3 px-4 text-left">Type</th>
            <th class="py-3 px-4 text-left">Mileage</th>
            <th class="py-3 px-4 text-left">Notes</th>
            <th class="py-3 px-4 text-right">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr><td colspan="7" class="text-center py-6 text-gray-400">No records.</td></tr>
        }
        else
        {
            @foreach (var m in Model)
            {
                <tr class="border-b hover:bg-gray-50">
                    <td class="py-3 px-4">@m.ServiceDate.ToString("dd MMM yyyy")</td>
                    <td class="py-3 px-4">
                        <div class="text-sm">@m.Car?.PlateNumber</div>
                        <div class="text-xs text-gray-500">@m.Car?.Brand @m.Car?.Model</div>
                    </td>
                    <td class="py-3 px-4">@m.Branch?.BranchName</td>
                    <td class="py-3 px-4">@m.ServiceType</td>
                    <td class="py-3 px-4">@m.Mileage</td>
                    <td class="py-3 px-4">
                        <span class="text-sm">@m.Notes</span>
                    </td>
                    <td class="py-3 px-4 text-right space-x-2">
                        <a asp-action="Edit" asp-route-id="@m.HistoryId" class="px-3 py-1 text-xs rounded-lg bg-gray-100 hover:bg-gray-200">✏️ Edit</a>
                        <a asp-action="Delete" asp-route-id="@m.HistoryId" class="px-3 py-1 text-xs rounded-lg bg-red-100 text-red-700 hover:bg-red-200">🗑️ Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
