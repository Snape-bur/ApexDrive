@model ApexDrive.Models.CarMaintenanceHistory
@{
    ViewData["Title"] = "Edit Maintenance Record";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-4xl mx-auto pb-10">
    <a asp-action="Index" class="inline-flex items-center gap-2 text-sm font-semibold text-gray-500 hover:text-brand transition-colors mb-6 group">
        <i class="fa-solid fa-arrow-left group-hover:-translate-x-1 transition-transform"></i>
        Back to History
    </a>

    <div class="bg-white rounded-3xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="bg-gray-50/50 px-8 py-6 border-b border-gray-100">
            <div class="flex items-center gap-4">
                <div class="bg-brand p-3 rounded-2xl shadow-lg shadow-blue-100">
                    <i class="fa-solid fa-pen-to-square text-white text-xl"></i>
                </div>
                <div>
                    <h1 class="text-2xl font-black text-gray-900 tracking-tight">Edit Service Log</h1>
                    <p class="text-sm text-gray-500 font-medium">Update maintenance details for <span class="font-bold text-brand">@Model.Car?.PlateNumber</span>.</p>
                </div>
            </div>
        </div>

        <form asp-action="Edit" method="post" class="p-8 space-y-6">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="HistoryId" />
            <div asp-validation-summary="ModelOnly" class="p-4 bg-red-50 border-l-4 border-red-500 text-red-700 text-sm rounded-r-xl"></div>

            <div class="space-y-2">
                <label asp-for="CarId" class="text-xs font-black uppercase tracking-widest text-gray-400 ml-1">Vehicle</label>
                <div class="relative group">
                    <i class="fa-solid fa-car absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-brand transition-colors"></i>
                    <select asp-for="CarId" class="block w-full pl-11 pr-10 py-3 bg-gray-50 border border-gray-200 rounded-xl text-sm appearance-none focus:ring-2 focus:ring-brand/20 focus:border-brand transition-all outline-none cursor-pointer"
                            asp-items="@(new SelectList(ViewBag.Cars, "CarId", "PlateNumber", Model.CarId))">
                        <option value="">-- Select Car --</option>
                    </select>
                    <i class="fa-solid fa-chevron-down absolute right-4 top-1/2 -translate-y-1/2 text-xs text-gray-400 pointer-events-none"></i>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-2">
                    <label asp-for="ServiceDate" class="text-xs font-black uppercase tracking-widest text-gray-400 ml-1">Service Date</label>
                    <div class="relative group">
                        <i class="fa-solid fa-calendar-day absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-brand transition-colors"></i>
                        <input asp-for="ServiceDate" type="date" class="block w-full pl-11 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-brand/20 focus:border-brand transition-all outline-none" />
                    </div>
                </div>
                <div class="space-y-2">
                    <label asp-for="Mileage" class="text-xs font-black uppercase tracking-widest text-gray-400 ml-1">Odometer (km)</label>
                    <div class="relative group">
                        <i class="fa-solid fa-gauge-high absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-brand transition-colors"></i>
                        <input asp-for="Mileage" class="block w-full pl-11 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-brand/20 focus:border-brand transition-all outline-none" />
                    </div>
                </div>
            </div>

            <div class="space-y-2">
                <label asp-for="ServiceType" class="text-xs font-black uppercase tracking-widest text-gray-400 ml-1">Service Type</label>
                <div class="relative group">
                    <i class="fa-solid fa-wrench absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-brand transition-colors"></i>
                    <input asp-for="ServiceType" class="block w-full pl-11 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-brand/20 focus:border-brand transition-all outline-none" />
                </div>
            </div>

            <div class="space-y-2">
                <label asp-for="Notes" class="text-xs font-black uppercase tracking-widest text-gray-400 ml-1">Notes / Remarks</label>
                <textarea asp-for="Notes" rows="4" class="block w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:ring-2 focus:ring-brand/20 focus:border-brand transition-all outline-none resize-none"></textarea>
            </div>

            <div class="flex justify-end gap-3 pt-6 border-t border-gray-100">
                <a asp-action="Index" class="px-6 py-2.5 rounded-xl text-sm font-bold text-gray-500 hover:bg-gray-100 transition-all">Discard Changes</a>
                <button type="submit" class="inline-flex items-center gap-2 bg-brand text-white px-10 py-2.5 rounded-xl font-bold hover:bg-blue-700 transition-all shadow-lg shadow-blue-100">
                    <i class="fa-solid fa-floppy-disk"></i>
                    Save Updates
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}