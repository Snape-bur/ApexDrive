@model ApexDrive.Models.CarMaintenanceHistory
@{
    ViewData["Title"] = "Edit Maintenance Record";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h1 class="text-2xl font-bold text-brand mb-6">✏️ Edit Maintenance Record</h1>

<form asp-action="Edit" method="post" class="space-y-6 bg-white p-6 rounded-xl shadow-sm max-w-3xl">
    <input type="hidden" asp-for="HistoryId" />

    <div asp-validation-summary="ModelOnly" class="bg-red-50 text-red-700 border border-red-200 rounded-lg p-3 text-sm mb-2"></div>

    <!-- Car Selection -->
    <div>
        <label asp-for="CarId" class="block font-medium text-gray-700">Car</label>
        <select asp-for="CarId"
                class="form-select w-full border-gray-300 rounded-lg px-3 py-2 focus:ring-brand focus:border-brand"
                asp-items="@(new SelectList(ViewBag.Cars, "CarId", "PlateNumber", Model.CarId))">
            <option value="">-- Select Car --</option>
        </select>
        <span asp-validation-for="CarId" class="text-red-500 text-sm"></span>
    </div>

    <!-- Service Date & Mileage -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            <label asp-for="ServiceDate" class="block font-medium text-gray-700">Service Date</label>
            <input asp-for="ServiceDate" type="date"
                   class="form-input w-full border-gray-300 rounded-lg px-3 py-2 focus:ring-brand focus:border-brand" />
            <span asp-validation-for="ServiceDate" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Mileage" class="block font-medium text-gray-700">Mileage (km)</label>
            <input asp-for="Mileage"
                   class="form-input w-full border-gray-300 rounded-lg px-3 py-2 focus:ring-brand focus:border-brand"
                   placeholder="e.g. 45000" />
            <span asp-validation-for="Mileage" class="text-red-500 text-sm"></span>
        </div>
    </div>

    <!-- Service Type -->
    <div>
        <label asp-for="ServiceType" class="block font-medium text-gray-700">Service Type</label>
        <input asp-for="ServiceType"
               class="form-input w-full border-gray-300 rounded-lg px-3 py-2 focus:ring-brand focus:border-brand"
               placeholder="Oil Change, Tires, Brake Inspection, etc." />
        <span asp-validation-for="ServiceType" class="text-red-500 text-sm"></span>
    </div>

    <!-- Notes -->
    <div>
        <label asp-for="Notes" class="block font-medium text-gray-700">Notes</label>
        <textarea asp-for="Notes"
                  class="form-input w-full h-24 border-gray-300 rounded-lg px-3 py-2 focus:ring-brand focus:border-brand"
                  placeholder="Enter additional details about the service..."></textarea>
        <span asp-validation-for="Notes" class="text-red-500 text-sm"></span>
    </div>

    <!-- Buttons -->
    <div class="flex justify-end gap-2">
        <a asp-action="Index" class="px-4 py-2 bg-gray-200 hover:bg-gray-300 rounded-lg text-gray-700 font-medium">
            Cancel
        </a>
        <button type="submit" class="px-4 py-2 bg-brand text-white rounded-lg hover:bg-blue-700 font-medium">
            💾 Save Changes
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
