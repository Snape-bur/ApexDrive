@model ApexDrive.Models.CarMaintenanceHistory
@{
    ViewData["Title"] = "Delete Maintenance";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h1 class="text-2xl font-bold text-red-600 mb-6">🗑️ Delete Maintenance</h1>

<div class="bg-white p-6 rounded-xl shadow-sm max-w-2xl">
    <div class="bg-red-50 border border-red-200 text-red-700 p-4 rounded-lg mb-4">
        <strong>Warning:</strong> This action cannot be undone.
    </div>

    <div class="border rounded-lg p-4 bg-gray-50 mb-6 text-sm">
        <p><strong>Date:</strong> @Model.ServiceDate.ToString("dd MMM yyyy")</p>
        <p><strong>Car:</strong> @Model.Car?.PlateNumber (@Model.Car?.Brand @Model.Car?.Model)</p>
        <p><strong>Branch:</strong> @Model.Branch?.BranchName</p>
        <p><strong>Type:</strong> @Model.ServiceType</p>
        <p><strong>Notes:</strong> @Model.Notes</p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="HistoryId" />
        <div class="flex justify-end gap-2">
            <a asp-action="Index" class="px-4 py-2 bg-gray-200 hover:bg-gray-300 rounded-lg">Cancel</a>
            <button class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg">Delete</button>
        </div>
    </form>
</div>
