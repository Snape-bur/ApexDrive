@model ApexDrive.Models.CarMaintenanceHistory
@{
    ViewData["Title"] = "Delete Maintenance";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-2xl mx-auto pb-10">
    <a asp-action="Index" class="inline-flex items-center gap-2 text-sm font-semibold text-gray-500 hover:text-brand transition-colors mb-6 group">
        <i class="fa-solid fa-arrow-left group-hover:-translate-x-1 transition-transform"></i>
        Back to History
    </a>

    <div class="bg-white rounded-3xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="bg-red-50/50 px-8 py-6 border-b border-red-100">
            <div class="flex items-center gap-4">
                <div class="bg-red-600 p-3 rounded-2xl shadow-lg shadow-red-100">
                    <i class="fa-solid fa-trash-can text-white text-xl"></i>
                </div>
                <div>
                    <h1 class="text-2xl font-black text-gray-900 tracking-tight">Delete Record</h1>
                    <p class="text-sm text-red-600 font-medium">This maintenance log will be permanently removed.</p>
                </div>
            </div>
        </div>

        <div class="p-8">
            <div class="bg-gray-50 rounded-2xl p-6 border border-gray-100 mb-8 grid grid-cols-2 gap-4">
                <div class="col-span-2 pb-2 border-b border-gray-200">
                    <p class="text-[10px] font-black uppercase text-gray-400">Vehicle</p>
                    <p class="text-sm font-bold text-gray-900">@Model.Car?.PlateNumber (@Model.Car?.Brand @Model.Car?.Model)</p>
                </div>
                <div>
                    <p class="text-[10px] font-black uppercase text-gray-400">Date</p>
                    <p class="text-sm font-bold text-gray-700">@Model.ServiceDate.ToString("dd MMM yyyy")</p>
                </div>
                <div>
                    <p class="text-[10px] font-black uppercase text-gray-400">Type</p>
                    <p class="text-sm font-bold text-gray-700">@Model.ServiceType</p>
                </div>
                <div class="col-span-2">
                    <p class="text-[10px] font-black uppercase text-gray-400">Notes</p>
                    <p class="text-xs text-gray-600">@Model.Notes</p>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="flex items-center justify-end gap-3">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="HistoryId" />
                <a asp-action="Index" class="px-6 py-2.5 rounded-xl text-sm font-bold text-gray-500 hover:bg-gray-100 transition-all">Cancel</a>
                <button type="submit" class="inline-flex items-center gap-2 bg-red-600 text-white px-8 py-2.5 rounded-xl font-bold hover:bg-red-700 transition-all shadow-lg shadow-red-100">
                    <i class="fa-solid fa-trash-can"></i>
                    Confirm Delete
                </button>
            </form>
        </div>
    </div>
</div>