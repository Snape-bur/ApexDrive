@page
@model LoginModel
@{
    Layout = "/Areas/Identity/Pages/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Log in";
}

<div class="min-h-screen flex items-center justify-center px-4">
    <div class="w-full max-w-md bg-[#0f0f10]/90 backdrop-blur-md border border-[#1f1f1f] rounded-2xl shadow-glow p-8 text-gray-200">
        <!-- Header -->
        <div class="text-center mb-6">
            <a asp-controller="Home" asp-action="Index" class="inline-flex items-center justify-center gap-1">
                <span class="text-3xl font-extrabold tracking-tight">
                    <span class="text-blue-500">Apex</span><span class="text-gray-100">Drive</span>
                </span>
            </a>
            <p class="mt-3 text-sm text-gray-400">Luxury car rentals — effortless elegance.</p>
        </div>

        <!-- Local Login Form -->
        <form id="account" method="post" class="space-y-5">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm" role="alert"></div>

            <div>
                <label asp-for="Input.Email" class="block text-sm font-medium text-gray-300">Email</label>
                <input asp-for="Input.Email"
                       class="mt-1 w-full rounded-xl border border-[#2d2d2d] bg-[#151515] text-gray-100 px-4 py-2 text-sm placeholder-gray-500 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                       placeholder="name@example.com" autocomplete="username" />
                <span asp-validation-for="Input.Email" class="text-red-500 text-xs"></span>
            </div>

            <div>
                <label asp-for="Input.Password" class="block text-sm font-medium text-gray-300">Password</label>
                <input asp-for="Input.Password"
                       class="mt-1 w-full rounded-xl border border-[#2d2d2d] bg-[#151515] text-gray-100 px-4 py-2 text-sm placeholder-gray-500 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                       placeholder="••••••" autocomplete="current-password" />
                <span asp-validation-for="Input.Password" class="text-red-500 text-xs"></span>
            </div>

            <div class="flex items-center justify-between text-sm">
                <div class="flex items-center gap-2">
                    <input asp-for="Input.RememberMe" class="h-4 w-4 rounded border-gray-500 bg-[#151515] text-blue-500 focus:ring-blue-500" />
                    <label asp-for="Input.RememberMe" class="text-gray-400">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                </div>
                <a id="forgot-password" asp-page="./ForgotPassword" class="text-blue-500 hover:underline">Forgot password?</a>
            </div>

            <button id="login-submit"
                    type="submit"
                    class="w-full rounded-xl bg-blue-600 hover:bg-blue-500 text-white font-semibold px-4 py-2 shadow-md shadow-blue-900/40 transition-all duration-200">
                Log in
            </button>

            <div class="mt-5 text-sm text-center space-y-1">
                <p>
                    Don’t have an account?
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-blue-400 hover:underline font-medium">Sign Up</a>
                </p>
                <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-gray-500 hover:text-blue-400">Resend email confirmation</a>
                </p>
            </div>
        </form>

        <!-- External Login -->
        <div class="mt-8">
            <h3 class="text-sm font-medium text-gray-400 text-center">Or log in with</h3>
            <div class="mt-4 space-y-3">
                @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <p class="text-sm text-gray-500 text-center">
                        No external authentication services configured.
                    </p>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-3">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit"
                                    class="w-full rounded-xl bg-[#1a1a1a] border border-[#2d2d2d] text-gray-200 px-4 py-2 text-sm font-semibold hover:bg-[#202020] transition-all duration-150"
                                    name="provider"
                                    value="@provider.Name">
                                @provider.DisplayName
                            </button>
                        }
                    </form>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
