@page
@model RegisterModel
@{
    ViewData["Title"] = "Create Account";
}

<div class="flex justify-center items-center min-h-screen bg-gray-50">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8">
        <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">
            Create Your ApexDrive Account
        </h2>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-5">
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-2"></div>

            <div>
                <label asp-for="Input.Email" class="block text-gray-700 font-semibold mb-1">Email</label>
                <input asp-for="Input.Email"
                       class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                       placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Input.Password" class="block text-gray-700 font-semibold mb-1">Password</label>
                <input asp-for="Input.Password"
                       class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                       placeholder="Enter password" />
                <span asp-validation-for="Input.Password" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Input.ConfirmPassword" class="block text-gray-700 font-semibold mb-1">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword"
                       class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                       placeholder="Confirm password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 text-sm"></span>
            </div>

            <button id="registerSubmit"
                    type="submit"
                    class="w-full bg-blue-600 text-white font-semibold py-2 rounded-lg hover:bg-blue-700 transition">
                Create Account
            </button>

            <p class="text-sm text-center text-gray-600 mt-4">
                Already have an account?
                <a asp-page="./Login" class="text-blue-600 hover:underline">Sign in</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
