@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Identity
@using ApexDrive.Models
@inject IStringLocalizer<SharedResource> L
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="@System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ApexDrive</title>
    <meta name="description" content="Rent a car in Thailand with ApexDrive. Best prices, new cars, airport pickup, 24/7 support." />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />

    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: { sans: ["Inter", "ui-sans-serif", "system-ui"] },
                    colors: {
                        primary: {
                            50: "#eef6ff",
                            100: "#d9ebff",
                            200: "#b3d7ff",
                            300: "#86beff",
                            400: "#5aa3ff",
                            500: "#2d87ff",
                            600: "#176de6",
                            700: "#1256b4",
                            800: "#0f4691",
                            900: "#0d3b79",
                        },
                    },
                    boxShadow: {
                        brand: "0 10px 30px -10px rgb(17 24 39 / 0.25)",
                    },
                },
            },
        };
    </script>

    <style>
        :root {
            color-scheme: light;
        }

        html, body {
            scroll-behavior: smooth;
        }

        .backdrop-blur-12 {
            backdrop-filter: blur(12px);
        }
    </style>
</head>

<body class="font-sans text-gray-800 antialiased bg-white">
    <!-- HEADER -->
    <header class="absolute inset-x-0 top-6 z-50">
        <div class="mx-auto max-w-6xl px-4">
            <div class="flex h-16 items-center justify-between rounded-full bg-white/95 px-4 sm:px-6 backdrop-blur-md shadow-lg ring-1 ring-black/5">
                <!-- ✅ Logo -->
                <a asp-controller="Home" asp-action="Index" class="flex items-center">
                    <span class="text-2xl font-extrabold tracking-tight">
                        <span class="text-blue-600">Apex</span><span class="text-gray-900">Drive</span>
                    </span>
                </a>

                <!-- ✅ Nav Links -->
                <nav class="hidden md:flex items-center gap-10 text-sm font-medium text-gray-700">
                    <a href="#home">@L["Home", "Home"]</a>
                    <a href="#services">@L["Services", "Services"]</a>
                    <a href="#fleet">@L["Fleet", "Fleet"]</a>
                    <a href="#faq">@L["FAQ", "FAQ"]</a>
                    <a href="#contact">@L["Contact", "Contact"]</a>
                </nav>

                <!-- ✅ Right Side Buttons -->
                <div class="hidden md:flex items-center gap-3">
                    <select id="cultureSelect"
                            class="h-9 rounded-full border border-gray-300 bg-white/80 px-3 text-sm"
                            aria-label="Language">
                        @{
                            var ui = System.Globalization.CultureInfo.CurrentUICulture.Name;
                        }
                        <option value="en-US" selected="@(ui == "en-US")">English</option>
                        <option value="th-TH" selected="@(ui == "th-TH")">ไทย</option>
                        <option value="my-MM" selected="@(ui == "my-MM")">မြန်မာ</option>
                    </select>

                    <!-- ✅ Auth Buttons -->
                    <div class="flex items-center gap-2">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <!-- Logged-in user -->
                            <a asp-area="Customer" asp-controller="Booking" asp-action="MyBookings"
                               class="hidden sm:inline-flex rounded-full border border-gray-300 px-4 py-1.5 text-sm font-semibold text-gray-700 hover:bg-gray-100">
                                My Bookings
                            </a>

                            <a asp-area="Customer" asp-controller="Profile" asp-action="Index"
                               class="inline-flex h-9 w-9 items-center justify-center rounded-full bg-black text-white ring-2 ring-white"
                               aria-label="Profile">
                                <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M12 12a4 4 0 100-8 4 4 0 000 8zM6 20a6 6 0 1112 0v1H6v-1z" />
                                </svg>
                            </a>

                            <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="inline">
                                <button type="submit"
                                        class="hidden sm:inline-flex rounded-full border border-gray-300 px-4 py-1.5 text-sm font-semibold text-gray-700 hover:bg-gray-100">
                                    Logout
                                </button>
                            </form>
                        }
                        else
                        {
                            <!-- Guest -->
                            <a asp-area="Identity" asp-page="/Account/Login"
                               class="rounded-full border border-gray-300 px-4 py-1.5 text-sm font-semibold text-gray-700 hover:bg-gray-100">
                                Log In
                            </a>
                            <a asp-area="Identity" asp-page="/Account/Register"
                               class="rounded-full bg-primary-600 px-4 py-1.5 text-sm font-semibold text-white hover:bg-primary-700">
                                Sign Up
                            </a>
                        }
                    </div>
                </div>

                <!-- ✅ Mobile Toggle -->
                <button id="menuBtn" class="md:hidden inline-flex items-center justify-center rounded-full p-2 hover:bg-gray-100">
                    <svg class="h-6 w-6" viewBox="0 0 24 24" stroke="currentColor" fill="none" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </div>

        <!-- ✅ Mobile Menu -->
        <div id="mobileMenu" class="md:hidden hidden">
            <div class="mx-auto mt-3 max-w-6xl px-4">
                <div class="rounded-2xl bg-white/95 p-4 shadow-lg ring-1 ring-black/5">
                    <a href="#home" class="block py-2">@L["Nav_Home", "Home"]</a>
                    <a href="#services" class="block py-2">@L["Nav_Services", "Services"]</a>
                    <a href="#fleet" class="block py-2">@L["Nav_Fleet", "Fleet"]</a>
                    <a href="#faq" class="block py-2">@L["Nav_FAQ", "FAQ"]</a>
                    <a href="#contact" class="block py-2">@L["Nav_Contact", "Contact"]</a>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <a asp-area="Customer" asp-controller="Booking" asp-action="Index" class="block py-2">My Bookings</a>
                        <form asp-area="Identity"
                              asp-page="/Account/Logout"
                              asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"
                              method="post">
                            <button type="submit" class="block w-full text-left py-2">
                                Logout
                            </button>
                        </form>

                    }
                    else
                    {
                        <a asp-area="Identity" asp-page="/Account/Login" class="block py-2">Login</a>
                        <a asp-area="Identity" asp-page="/Account/Register" class="block py-2">Sign Up</a>
                    }
                </div>
            </div>
        </div>
    </header>

    <!-- MAIN -->
    <main>
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-white border-t border-gray-100 pt-16 pb-8">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-2 gap-12 md:grid-cols-4 lg:grid-cols-5">

                <div class="col-span-2">
                    <a href="/" class="text-xl font-black tracking-tighter text-gray-900">
                        APEX<span class="text-primary-600">DRIVE</span>
                    </a>
                    <p class="mt-4 max-w-xs text-sm leading-relaxed text-gray-500">
                        @L["Footer_About", "Elevating your travel experience across Thailand with premium vehicles and unparalleled service since 2020."]
                    </p>
                    <div class="mt-6 flex gap-4">
                        @* Social Icons - Simplified *@
                        <a href="#" class="text-gray-400 hover:text-primary-600 transition-colors"><span class="sr-only">Facebook</span><svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" /></svg></a>
                        <a href="#" class="text-gray-400 hover:text-primary-600 transition-colors"><span class="sr-only">Instagram</span><svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zM12 7.004a5 5 0 100 10 5 5 0 000-10zm0 2a3 3 0 110 6 3 3 0 010-6zm4.804-2.45a1.125 1.125 0 100 2.25 1.125 1.125 0 000-2.25z" /></svg></a>
                    </div>
                </div>

                <div>
                    <h3 class="text-sm font-bold tracking-wider text-gray-900 uppercase">@L["Footer_Fleet", "Fleet"]</h3>
                    <ul class="mt-4 space-y-2">
                        <li><a href="#" class="text-sm text-gray-500 hover:text-primary-600 transition-colors">@L["SUV", "Luxury SUVs"]</a></li>
                        <li><a href="#" class="text-sm text-gray-500 hover:text-primary-600 transition-colors">@L["Sedan", "Premium Sedans"]</a></li>
                        <li><a href="#" class="text-sm text-gray-500 hover:text-primary-600 transition-colors">@L["EV", "Electric Vehicles"]</a></li>
                    </ul>
                </div>

                <div>
                    <h3 class="text-sm font-bold tracking-wider text-gray-900 uppercase">@L["Footer_Support", "Support"]</h3>
                    <ul class="mt-4 space-y-2">
                        <li><a href="#" class="text-sm text-gray-500 hover:text-primary-600 transition-colors">@L["HelpCenter", "Help Center"]</a></li>
                        <li><a href="#" class="text-sm text-gray-500 hover:text-primary-600 transition-colors">@L["Terms", "Rental Terms"]</a></li>
                        <li><a href="#" class="text-sm text-gray-500 hover:text-primary-600 transition-colors">@L["Privacy", "Privacy Policy"]</a></li>
                    </ul>
                </div>

                <div>
                    <h3 class="text-sm font-bold tracking-wider text-gray-900 uppercase">@L["Footer_Contact", "Contact"]</h3>
                    <ul class="mt-4 space-y-2">
                        <li class="text-sm text-gray-500">support@@apexdrive.com</li>
                        <li class="text-sm text-gray-500">+66 2 123 4567</li>
                    </ul>
                </div>
            </div>

            <div class="mt-16 border-t border-gray-100 pt-8 flex flex-col items-center justify-between gap-4 sm:flex-row">
                <p class="text-xs text-gray-400">
                    © @DateTime.Now.Year ApexDrive Co., Ltd. — @L["AllRights", "All Rights Reserved."]
                </p>
                <div class="flex items-center gap-6">
                    @* Payment Logos Placeholder *@
                    <span class="text-[10px] font-bold text-gray-300 uppercase tracking-[0.2em]">Verified Secure Payment</span>
                    <div class="flex gap-2 opacity-30 grayscale">
                        <img src="https://upload.wikimedia.org/wikipedia/commons/5/5e/Visa_Inc._logo.svg" class="h-4" alt="Visa">
                        <img src="https://upload.wikimedia.org/wikipedia/commons/2/2a/Mastercard-logo.svg" class="h-4" alt="Mastercard">
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script>
        // Mobile toggle
        const menuBtn = document.getElementById("menuBtn");
        const mobileMenu = document.getElementById("mobileMenu");
        menuBtn?.addEventListener("click", () => mobileMenu.classList.toggle("hidden"));

        // Language change cookie
        function setCultureCookie(culture) {
            document.cookie = `.AspNetCore.Culture=c=${culture}|uic=${culture}; path=/; max-age=31536000`;
            location.reload();
        }
        document.getElementById("cultureSelect")?.addEventListener("change", e => setCultureCookie(e.target.value));
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
