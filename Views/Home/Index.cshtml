    <section id="locations" class="bg-[#FDFDFD] py-20 sm:py-28 relative overflow-hidden">
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-[500px] bg-[radial-gradient(circle_at_top,_rgba(var(--primary-rgb),0.03)_0%,_transparent_70%)] pointer-events-none"></div>

        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 relative">
            <div class="mb-16 text-center">
                <span class="text-primary-600 text-sm font-bold uppercase tracking-widest">@L["Explore", "Explore"]</span>
                <h2 class="mt-3 text-3xl sm:text-4xl font-black text-gray-900 tracking-tight">
                    @L["Locations_Title", "Pick Up at 30+ Locations"]
                </h2>
                <div class="mt-4 mx-auto h-1 w-12 bg-primary-500 rounded-full"></div>
                <p class="mt-6 text-lg text-gray-500 max-w-2xl mx-auto leading-relaxed">
                    @L["Locations_Subtitle", "Seamless travel starts with our premium airport and downtown branches across the kingdom."]
                </p>
            </div>

            <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
                @* Location Card Component *@
                @{
                    var locations = new[] {
                                new { Name = "Bangkok", Code = "BKK/DMK", Img = "https://cdn-imgix.headout.com/media/images/6cb0b59e577eeab02d8fbdadc31ddbdc-4543-bangkok-don-mueang-international-airport-01.jpg?auto=format&w=1222&h=688&q=90&ar=16:9&crop=faces&fit=crop", Desc = @L["Loc_BKK_Desc", "Open 07:00–22:00 • Airport & City"] },
                                new { Name = "Phuket", Code = "HKT", Img = "https://plus.unsplash.com/premium_photo-1680339680335-7e3b8572fc00?q=80&w=1375&auto=format&fit=crop", Desc = @L["Loc_HKT_Desc", "Beach trips • SUVs & MPVs popular"] },
                                new { Name = "Chiang Mai", Code = "CNX", Img = "https://images.unsplash.com/photo-1578157695179-d7b7ddeb2f53?q=80&w=1631&auto=format&fit=crop", Desc = @L["Loc_CNX_Desc", "Mountains & scenic routes • Compact cars"] }
                                };
                }

                @foreach (var loc in locations)
                {
                    <div class="group cursor-pointer">
                        <div class="relative h-[280px] overflow-hidden rounded-3xl shadow-2xl shadow-gray-200/50">
                            <img class="h-full w-full object-cover transition-transform duration-700 group-hover:scale-110"
                                 src="@loc.Img" alt="@loc.Name" />

                            <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 via-gray-900/20 to-transparent opacity-60 transition-opacity group-hover:opacity-80"></div>

                            <div class="absolute bottom-6 left-6 right-6">
                                <span class="backdrop-blur-md bg-white/20 border border-white/30 text-white px-4 py-1.5 rounded-full text-xs font-bold tracking-wider uppercase">
                                    @loc.Name (@loc.Code)
                                </span>
                                <p class="mt-3 text-white/90 text-sm font-medium transform translate-y-2 opacity-0 transition-all duration-300 group-hover:translate-y-0 group-hover:opacity-100">
                                    @loc.Desc
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>


